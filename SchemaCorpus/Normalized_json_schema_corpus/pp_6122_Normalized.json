{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Route",
  "type": "object",
  "required": [
    "endpoint",
    "response"
  ],
  "properties": {
    "endpoint": {
      "description": "Endpoint",
      "type": "object",
      "$ref": "#/definitions/endpoint.schema.json"
    },
    "strict": {
      "description": "Strict endpoint",
      "type": "boolean"
    },
    "response": {
      "type": "object",
      "description": "Response object",
      "$ref": "#/definitions/response.schema.json"
    }
  },
  "definitions": {
    "endpoint.schema.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "description": "Endpoint",
      "type": "object",
      "required": [
        "path",
        "method"
      ],
      "properties": {
        "path": {
          "description": "Request path",
          "type": "string"
        },
        "method": {
          "description": "Request method",
          "type": "string",
          "enum": [
            "get",
            "head",
            "post",
            "put",
            "delete",
            "connect",
            "options",
            "trace",
            "patch"
          ]
        },
        "parameters": {
          "description": "URL parameters",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "object",
            "description": "URL parameter",
            "$ref": "#/definitions/parameter.schema.json"
          }
        },
        "queryParameters": {
          "description": "URL parameters",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "object",
            "description": "Query parameter",
            "$ref": "#/definitions/parameter.schema.json"
          }
        }
      }
    },
    "parameter.schema.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "description": "URL parameter",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "description": "Parameter name",
          "type": "string"
        },
        "type": {
          "description": "Parameter type",
          "type": "string",
          "enum": [
            "any",
            "int",
            "string",
            "boolean"
          ]
        },
        "pattern": {
          "description": "Parameter regex pattern",
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "response.schema.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "description": "Response object",
      "required": [
        "statusCode"
      ],
      "properties": {
        "template": {
          "description": "Template file",
          "type": "string"
        },
        "statusCode": {
          "description": "HTTP status code of the response",
          "type": "integer"
        }
      }
    }
  }
}