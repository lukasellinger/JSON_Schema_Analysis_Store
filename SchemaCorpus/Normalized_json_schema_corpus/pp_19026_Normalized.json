{
  "id": "gridRepresentation.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "example": "../examples/gridRepresentation.json",
  "description": "Information about grid objects in the resource.",
  "translation": {
    "ISO 19115-2": [
      "MD_GridSpatialRepresentation"
    ]
  },
  "type": "object",
  "required": [
    "numberOfDimensions",
    "cellGeometry",
    "dimension"
  ],
  "additionalProperties": true,
  "properties": {
    "numberOfDimensions": {
      "type": "number",
      "description": "The number of independent spatial-temporal axes.",
      "translation": {
        "ISO 19115-2": [
          "MD_GridSpatialRepresentation \u003e numberOfDimensions"
        ]
      }
    },
    "dimension": {
      "type": "array",
      "description": "Information about spatial-temporal axis properties.",
      "translation": {
        "ISO 19115-2": [
          "MD_GridSpatialRepresentation \u003e axisDimensionProperties"
        ]
      },
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/dimension"
      }
    },
    "cellGeometry": {
      "type": "string",
      "description": "Identification of grid data as point or cell.",
      "translation": {
        "ISO 19115-2": [
          "MD_GridSpatialRepresentation \u003e cellGeometry"
        ]
      }
    },
    "transformationParameterAvailable": {
      "type": "boolean",
      "description": "An indication of whether or not parameters for transformation between image coordinates and geographic or map coordinates exist (are available).",
      "translation": {
        "ISO 19115-2": [
          "MD_GridSpatialRepresentation \u003e transformationParameterAvailability"
        ]
      },
      "default": false
    }
  },
  "definitions": {
    "dimension": {
      "type": "object",
      "required": [
        "dimensionType",
        "dimensionSize"
      ],
      "additionalProperties": true,
      "properties": {
        "dimensionType": {
          "type": "string",
          "description": "The type of dimension for this axis.",
          "translation": {
            "ISO 19115-2": [
              "MD_GridSpatialRepresentation \u003e axisDimensionProperties \u003e MD_Dimension \u003e dimensionName \u003e MD_DimensionNameTypeCode"
            ]
          }
        },
        "dimensionSize": {
          "type": "integer",
          "description": "The number of elements along the axis.",
          "translation": {
            "ISO 19115-2": [
              "MD_GridSpatialRepresentation \u003e axisDimensionProperties \u003e MD_Dimension \u003e dimensionSize"
            ]
          }
        },
        "resolution": {
          "$ref": "#/definitions/measure.json",
          "description": "The degree of detail in the grid.",
          "translation": {
            "ISO 19115-2": [
              "MD_GridSpatialRepresentation \u003e axisDimensionProperties \u003e MD_Dimension \u003e resolution"
            ]
          }
        },
        "dimensionTitle": {
          "type": "string",
          "description": "The name of the axis.",
          "translation": {
            "ISO 19115-2": [
              ""
            ]
          }
        },
        "dimensionDescription": {
          "type": "string",
          "description": "The description of the axis.",
          "translation": {
            "ISO 19115-2": [
              ""
            ]
          }
        }
      }
    },
    "measure.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "title": "measure",
      "description": "Number and type of units",
      "example": "../examples/measure.json",
      "required": [
        "type",
        "value",
        "unitOfMeasure"
      ],
      "additionalProperties": true,
      "properties": {
        "type": {
          "enum": [
            "distance",
            "length",
            "angle",
            "measure",
            "scale"
          ],
          "description": "The type of measurement.",
          "translation": {}
        },
        "value": {
          "type": "number",
          "description": "The number of units in the measurement.",
          "translation": {}
        },
        "unitOfMeasure": {
          "type": "string",
          "description": "The type of units to associated with the value.",
          "translation": {},
          "minLength": 1
        }
      }
    }
  }
}