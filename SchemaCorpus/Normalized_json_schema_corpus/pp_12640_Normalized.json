{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Composite",
  "description": "A Composite component",
  "type": "object",
  "properties": {
    "content": {
      "title": "Content Body",
      "type": "array",
      "minItems": 1,
      "items": {
        "oneOf": [
          {
            "$ref": "#/definitions/text.json"
          },
          {
            "$ref": "#/definitions/cta.json"
          }
        ]
      }
    },
    "objects": {
      "title": "Objects",
      "type": "array",
      "minItems": 1,
      "format": "tabs",
      "items": {
        "title": "Object",
        "type": "object",
        "properties": {
          "object": {
            "$ref": "#/definitions/object.json"
          },
          "quote": {
            "type": "object",
            "properties": {
              "text": {
                "title": "Quote",
                "type": "string",
                "format": "url"
              },
              "author": {
                "title": "Author",
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "text.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Text",
      "description": "Text schema",
      "type": "object",
      "properties": {
        "value": {
          "description": "Text in the call to action link",
          "type": "string"
        }
      },
      "required": [
        "value"
      ]
    },
    "cta.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "CTA",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "readonly": true,
          "enum": [
            "cta"
          ],
          "options": {
            "hidden": true
          }
        },
        "template": {
          "type": "string",
          "options": {
            "hidden": true
          }
        },
        "type": {
          "description": "Type of CTA",
          "type": "string",
          "enum": [
            "primary",
            "secondary",
            "disabled"
          ]
        },
        "href": {
          "description": "Call to action URL",
          "type": "string",
          "format": "url"
        },
        "title": {
          "description": "Anchor tag title attribute",
          "type": "string"
        },
        "text": {
          "description": "Text in the call to action link",
          "type": "string"
        }
      },
      "required": [
        "name",
        "href",
        "text"
      ],
      "additionalProperties": false
    },
    "object.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Example Object",
      "description": "An Object",
      "type": "object",
      "format": "grid",
      "properties": {
        "link": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string"
            },
            "title": {
              "type": "string"
            }
          },
          "required": [
            "url"
          ]
        }
      }
    }
  }
}