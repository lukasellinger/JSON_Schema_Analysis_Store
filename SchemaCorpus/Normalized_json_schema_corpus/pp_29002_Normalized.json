{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "resource_id": {
    "$ref": "#/definitions/common.json_app_id"
  },
  "resource": {
    "type": "object",
    "properties": {
      "count": {
        "type": "integer",
        "minimum": 0,
        "maximum": 1000
      },
      "policy": {
        "type": [
          "string",
          "null"
        ],
        "enum": [
          "fifo",
          "lifo",
          null
        ]
      },
      "additionalProperties": false
    }
  },
  "verbs": {
    "create": {
      "required": [
        "count"
      ]
    },
    "update": {
      "anyOf": [
        {
          "required": [
            "count"
          ]
        },
        {
          "required": [
            "policy"
          ]
        }
      ]
    }
  },
  "definitions": {
    "common.json_app_id": {
      "anyOf": [
        {
          "type": "string",
          "maxLength": 117,
          "pattern": "^[a-zA-Z0-9_-]{2,20}([.][\\w-]+)+$"
        },
        {
          "type": "string",
          "maxLength": 117,
          "pattern": "^[a-zA-Z0-9_-]{2,20}@[\\w-]+([.][\\w-]+)+$"
        }
      ]
    }
  }
}