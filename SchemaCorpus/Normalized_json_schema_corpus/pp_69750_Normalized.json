{
  "_comment": "This Spec is for Phase 1!! Most updated version is at https://github.com/reTHINK-project/specs/tree/master/schemas",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "HypertyDescriptor",
  "type": "object",
  "required": [
    "dataObjectUrls",
    "hypertyType",
    "messageSchemaUrl",
    "constraints"
  ],
  "properties": {
    "dataObjectUrls": {
      "$ref": "#/definitions/URL.json_HypertyCatalogueURLList"
    },
    "hypertyType": {
      "type": "array",
      "items": {
        "enum": [
          "chat",
          "audio",
          "video",
          "av",
          "screen",
          "file",
          "midi",
          "activity_context",
          "availability_context",
          "location_context",
          "heart_rate_contexst",
          "user_steps_context",
          "battery_context",
          "sleep_context",
          "light_context",
          "humidity_context",
          "power",
          "user_activity_context",
          "user_communication_context"
        ]
      }
    },
    "messageSchemaUrl": {
      "type": "string"
    },
    "configuration": {
      "$ref": "#/definitions/HypertyConfiguration"
    },
    "constraints": {
      "$ref": "#/definitions/HypertyRuntimeDescriptor_RuntimeHypertyCapabilities"
    },
    "policiesUrl": {
      "type": "string"
    }
  },
  "HypertyConfiguration": {
    "type": "object",
    "properties": {}
  },
  "definitions": {
    "URL.json_HypertyCatalogueURLList": {
      "type": "object",
      "properties": {}
    },
    "HypertyConfiguration": {
      "type": "object",
      "properties": {}
    },
    "HypertyRuntimeDescriptor_RuntimeHypertyCapabilities": {
      "type": "object",
      "properties": {
        "mic": {
          "type": "boolean"
        },
        "camera": {
          "type": "boolean"
        },
        "sensor": {
          "type": "boolean"
        },
        "webrtc": {
          "type": "boolean"
        },
        "ortc": {
          "type": "boolean"
        }
      }
    }
  }
}