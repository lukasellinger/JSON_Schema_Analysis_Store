            }
          }
        }
      },
      "required": [
        "type"
      ],
      "additionalProperties": false
    },
    "condition": {
      "allOf": [
        {
          "oneOf": [
            {
              "properties": {
                "source": {
                  "type": "string"
                }
              },
              "required": [
                "source"
              ]
            },
            {
              "properties": {
                "field": {
                  "type": "string"
                }
              },
              "required": [
                "field"
              ]
            }
          ]
        },
        {
          "oneOf": [
            {
              "properties": {
                "equals": {
                  "type": "string"
                }
              },
              "required": [
                "equals"
              ]
            },
            {
              "properties": {
                "notEquals": {
                  "type": "string"
                }
              },
              "required": [
                "notEquals"
              ]
            },
            {
              "properties": {
                "like": {
                  "type": "string"
                }
              },
              "required": [
                "like"
              ]
            },
            {
              "properties": {
                "notLike": {
                  "type": "string"
                }
              },
              "required": [
                "notLike"
              ]
            },
            {
              "properties": {
                "contains": {
                  "type": "string"
                }
              },
              "required": [
                "contains"
              ]
            },
            {
              "properties": {
                "notContains": {
                  "type": "string"
                }
              },
              "required": [
                "notContains"
              ]
            },
            {
              "properties": {
                "in": {
                  "oneOf": [
                    {
                      "type": "array"
                    },
                    {
                      "type": "string"
                    }
                  ]
                }
              },
              "required": [
                "in"
              ]
            },
            {
              "properties": {
                "notIn": {
                  "oneOf": [
                    {
                      "type": "array"
                    },
                    {
                      "type": "string"
                    }
                  ]
                }
              },
              "required": [
                "notIn"
              ]
            },
            {
              "properties": {
                "containsKey": {
                  "type": "string"
                }
              },
              "required": [
                "containsKey"
              ]
            },
            {
              "properties": {
                "notContainsKey": {
                  "type": "string"
                }
              },
              "required": [
                "notContainsKey"
              ]
            },
            {
              "properties": {
                "match": {
                  "type": "string"
                }
              },
              "required": [
