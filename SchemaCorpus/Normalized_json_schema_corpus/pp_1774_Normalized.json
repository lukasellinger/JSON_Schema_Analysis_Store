          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "resourceGroupName": {
          "type": "string"
        },
        "existenceScope": {
          "type": "string",
          "enum": [
            "resourceGroup",
            "subscription"
          ]
        },
        "roleDefinitionIds": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "existenceCondition": {
          "oneOf": [
            {
              "$ref": "#/definitions/condition"
            },
            {
              "$ref": "#/definitions/operatorNot"
            },
            {
              "$ref": "#/definitions/operatorAnyOf"
            },
            {
              "$ref": "#/definitions/operatorAllOf"
            }
