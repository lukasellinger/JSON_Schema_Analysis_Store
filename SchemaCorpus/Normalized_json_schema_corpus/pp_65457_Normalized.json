{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "An officer (director, senior executive) of a company",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "not": {
        "pattern": "^[\\.\\,\\*\\\\\\-\\s\\{\\}\\(\\)]+$"
      }
    },
    "start_date": {
      "anyOf": [
        {
          "type": "string",
          "format": "date"
        },
        {
          "type": "null"
        }
      ]
    },
    "end_date": {
      "anyOf": [
        {
          "type": "string",
          "format": "date"
        },
        {
          "type": "null"
        }
      ]
    },
    "position": {
      "type": "string"
    },
    "uid": {
      "type": "string",
      "description": "a unique identifier given to the officership"
    },
    "other_attributes": {
      "type": "object",
      "properties": {
        "date_of_birth": {
          "type": "string",
          "format": "date"
        },
        "nationality": {
          "type": "string"
        },
        "person_uid": {
          "type": "string",
          "description": "a unique identifier given to the individual (as opposed to the officership)"
        },
        "address": {
          "$ref": "#/definitions/address.json"
        },
        "type": {
          "type": "string",
          "enum": [
            "Person",
            "Company"
          ],
          "description": "The type of entity that is the officer (either \u0027Person\u0027 or \u0027Company\u0027)"
        }
      }
    }
  },
  "required": [
    "name"
  ],
  "definitions": {
    "address.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "oneOf": [
        {
          "type": [
            "string",
            "null"
          ],
          "minLength": 2
        },
        {
          "name": "Address",
          "description": "An address object",
          "type": "object",
          "properties": {
            "street_address": {
              "type": "string"
            },
            "locality": {
              "type": "string"
            },
            "region": {
              "type": "string"
            },
            "postal_code": {
              "type": "string"
            },
            "country": {
              "type": "string"
            },
            "country_code": {
              "description": "ISO 3166-2 code for country",
              "type": "string"
            }
          },
          "anyOf": [
            {
              "required": [
                "street_address"
              ]
            },
            {
              "required": [
                "postal_code"
              ]
            },
            {
              "required": [
                "locality",
                "country"
              ]
            }
          ]
        }
      ]
    }
  }
}