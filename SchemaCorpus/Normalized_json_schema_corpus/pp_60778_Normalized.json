{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "Zendesk Application Manifest",
  "required": [
    "name",
    "author"
  ],
  "properties": {
    "name": {
      "type": "string",
      "title": "The Name Schema",
      "default": "",
      "examples": [
        "My App"
      ],
      "pattern": "^(.*)$"
    },
    "author": {
      "type": "object",
      "title": "The Author Schema",
      "required": [
        "name",
        "email",
        "url"
      ],
      "properties": {
        "name": {
          "type": "string",
          "title": "The Name Schema",
          "default": "",
          "examples": [
            "Jean Thompson"
          ],
          "pattern": "^(.*)$"
        },
        "email": {
          "type": "string",
          "title": "The Email Schema",
          "default": "",
          "examples": [
            "support@omniwear.com"
          ],
          "pattern": "^(.*)$"
        },
        "url": {
          "type": "string",
          "title": "The Url Schema",
          "default": "",
          "examples": [
            "https://www.omniwear.com/profiles/jthompson"
          ],
          "pattern": "^(.*)$"
        }
      }
    },
    "defaultLocale": {
      "type": "string",
      "title": "The Defaultlocale Schema",
      "default": "",
      "examples": [
        "en"
      ],
      "pattern": "^(.*)$"
    },
    "private": {
      "type": "boolean",
      "title": "The Private Schema",
      "default": false,
      "examples": [
        false
      ]
    },
    "location": {
      "type": "object",
      "title": "The Location Schema",
      "required": [
        "support"
      ],
      "properties": {
        "support": {
          "type": "object",
          "title": "The Support Schema",
          "required": [
            "background",
            "ticket_sidebar",
            "top_bar"
          ],
          "properties": {
            "background": {
              "type": "string",
              "title": "The Background Schema",
              "default": "",
              "examples": [
                "assets/iframe.html"
              ],
              "pattern": "^(.*)$"
            },
            "ticket_sidebar": {
              "type": "object",
              "title": "The Ticket_sidebar Schema",
              "required": [
                "autoLoad"
              ],
              "properties": {
                "autoLoad": {
                  "type": "boolean",
                  "title": "The Autoload Schema",
                  "default": false,
                  "examples": [
                    false
                  ]
                }
              }
            },
            "top_bar": {
              "type": "object",
              "title": "The Top_bar Schema",
              "required": [
                "autoHide",
                "url"
              ],
              "properties": {
                "autoHide": {
                  "type": "boolean",
                  "title": "The Autohide Schema",
                  "default": false,
                  "examples": [
                    true
                  ]
                },
                "url": {
                  "type": "string",
                  "title": "The Url Schema",
                  "default": "",
                  "examples": [
                    "assets/top_bar.html"
                  ],
                  "pattern": "^(.*)$"
                }
              }
            }
          }
        }
      }
    },
    "domainWhitelist": {
      "type": "array",
      "title": "The Domainwhitelist Schema",
      "items": {
        "type": "string",
        "title": "The Items Schema",
        "default": "",
        "examples": [
          "omniwear.com"
        ],
        "pattern": "^(.*)$"
      }
    },
    "parameters": {
      "type": "array",
      "title": "The Parameters Schema",
      "items": {
        "type": "object",
        "title": "The Items Schema",
        "required": [
          "name",
          "type",
          "secure",
          "required"
        ],
        "properties": {
          "name": {
            "type": "string",
            "title": "The Name Schema",
            "default": "",
            "examples": [
              "token"
            ],
            "pattern": "^(.*)$"
          },
          "type": {
            "type": "string",
            "title": "The Type Schema",
            "default": "",
            "examples": [
              "text"
            ],
            "pattern": "^(.*)$"
          },
          "secure": {
            "type": "boolean",
            "title": "The Secure Schema",
            "default": false,
            "examples": [
              true
            ]
          },
          "required": {
            "type": "boolean",
            "title": "The Required Schema",
            "default": false,
            "examples": [
              true
            ]
          }
        }
      }
    },
    "version": {
      "type": "string",
      "title": "The Version Schema",
      "default": "",
      "examples": [
        "1.0"
      ],
      "pattern": "^(.*)$"
    },
    "frameworkVersion": {
      "type": "string",
      "title": "The Frameworkversion Schema",
      "default": "",
      "examples": [
        "2.0"
      ],
      "pattern": "^(.*)$"
    }
  }
}