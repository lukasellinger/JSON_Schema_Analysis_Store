{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://raw.githubusercontent.com/AlekseyBuzmakov/FCAPS/master/FCAPS/schemas/concept.json",
  "title": "Formal Concept",
  "description": "A description of predefined members of a concept",
  "type": "object",
  "properties": {
    "Ext": {
      "title": "Extent of a Formal Concept",
      "description": "Extent of a Formal Concept",
      "$ref": "#/definitions/patterns\\BinarySet.json"
    },
    "Int": {
      "title": "Intent of a Formal Concept",
      "description": "Intent of a Formal Concept",
      "$ref": "#/definitions/patterns\\pattern.json"
    },
    "Supp": {
      "title": "Support of the Intent",
      "description": "Support of the intent, i.e., the cardinality of the extent",
      "type": "integer",
      "minimum": 0
    }
  },
  "definitions": {
    "patterns\\BinarySet.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "A binary set pattern",
      "description": "A pattern given by a binary set",
      "anyOf": [
        {
          "description": "It is a either a named est, ...",
          "$ref": "#/definitions/patterns\\NamedSet.json"
        },
        {
          "description": "... or a indexed set",
          "$ref": "#/definitions/patterns\\IndexedSet.json"
        }
      ]
    },
    "patterns\\NamedSet.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Named Set Pattern",
      "description": "Pattern corresponds to a set given by the names of its elements",
      "allOf": [
        {
          "description": "It is a pattern",
          "$ref": "#/definitions/patterns\\pattern.json"
        },
        {
          "type": "object",
          "properties": {
            "Count": {
              "title": "Set Cardinality",
              "description": "The number of elements in the set",
              "type": "integer",
              "minimum": 0
            },
            "Names": {
              "title": "Element Names",
              "description": "The list of element names",
              "type": "array",
              "items": {
                "title": "Element Name",
                "description": "The name of an element in the set",
                "type": "string"
              }
            }
          },
          "required": [
            "Count",
            "Names"
          ]
        }
      ]
    },
    "patterns\\pattern.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Pattern Description",
      "description": "A description of a pattern"
    },
    "patterns\\IndexedSet.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Indexed Set Pattern",
      "description": "Pattern corresponds to a set given by the indices of its elements",
      "allOf": [
        {
          "description": "It is a pattern",
          "$ref": "#/definitions/patterns\\pattern.json"
        },
        {
          "type": "object",
          "properties": {
            "Count": {
              "title": "Set Cardinality",
              "description": "The number of elements in the set",
              "type": "integer",
              "minimum": 0
            },
            "Inds": {
              "title": "Element Indices",
              "description": "The list of element indices",
              "type": "array",
              "items": {
                "title": "Element Index",
                "description": "The index of an element in the set",
                "type": "integer"
              }
            }
          },
          "required": [
            "Count",
            "Inds"
          ]
        }
      ]
    }
  }
}