{
  "$schema": "http://json-schema.org/draft-03/schema",
  "$license": [
    "http://www.apache.org/licenses/LICENSE-2.0"
  ],
  "id": "#",
  "type": "object",
  "javaType": "org.apache.streams.instagram.config.InstagramEngagersProviderConfiguration",
  "extends": {
    "$ref": "#/definitions/InstagramConfiguration.json"
  },
  "javaInterfaces": [
    "java.io.Serializable"
  ],
  "properties": {
    "endpoints": {
      "type": "array",
      "description": "Which endpoints to use when finding engagers.",
      "items": {
        "type": "string",
        "enum": [
          "comments",
          "likes"
        ]
      }
    },
    "info": {
      "type": "array",
      "description": "A list of media IDs, indicating the media whose comments should be delivered on the stream.",
      "items": {
        "type": "string"
      }
    },
    "max_items": {
      "type": "integer",
      "description": "Max items per user to collect",
      "default": 5000
    }
  },
  "definitions": {
    "InstagramConfiguration.json": {
      "$schema": "http://json-schema.org/draft-03/schema",
      "$license": [
        "http://www.apache.org/licenses/LICENSE-2.0"
      ],
      "type": "object",
      "javaType": "org.apache.streams.instagram.config.InstagramConfiguration",
      "javaInterfaces": [
        "java.io.Serializable"
      ],
      "properties": {
        "protocol": {
          "type": "string",
          "description": "The protocol"
        },
        "host": {
          "type": "string",
          "description": "The host"
        },
        "port": {
          "type": "integer",
          "description": "The port"
        },
        "version": {
          "type": "string",
          "description": "The version"
        },
        "oauth": {
          "type": "object",
          "dynamic": "true",
          "javaType": "org.apache.streams.instagram.config.InstagramOAuthConfiguration",
          "javaInterfaces": [
            "java.io.Serializable"
          ],
          "properties": {
            "clientId": {
              "type": "string"
            },
            "clientSecret": {
              "type": "string"
            },
            "accessToken": {
              "type": "string"
            }
          }
        },
        "threadsPerProvider": {
          "type": "integer",
          "description": "number of threads per provider"
        },
        "retrySleepMs": {
          "type": "integer",
          "description": "ms to sleep when hitting a rate limit"
        },
        "retryMax": {
          "type": "integer",
          "description": "max times to retry"
        }
      }
    }
  }
}