{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "/",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "permissions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "write": {
          "type": "boolean"
        },
        "read": {
          "type": "boolean"
        },
        "delete": {
          "type": "boolean"
        }
      }
    },
    "collection": {
      "type": "string",
      "minLength": 1
    },
    "namespace": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": [
    "permissions",
    "collection",
    "namespace"
  ]
}