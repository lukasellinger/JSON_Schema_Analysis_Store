{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://www.ortolang.fr/schema/012#",
  "description": "Schema for ORTOLANG item",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "title": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "lang": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      }
    },
    "description": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "lang": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      }
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "lang": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      }
    },
    "bibliographicCitation": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "lang": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      }
    },
    "datasize": {
      "type": "string"
    },
    "publications": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "priority": {
            "type": "string",
            "enum": [
              "primary",
              "secondary"
            ]
          },
          "value": {
            "type": "string"
          }
        },
        "required": [
          "priority",
          "value"
        ]
      }
    },
    "website": {
      "type": "string"
    },
    "image": {
      "type": "string"
    },
    "preview": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "line",
          "enum": [
            "line",
            "slideshow"
          ]
        },
        "paths": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "statusOfUse": {
      "type": "string"
    },
    "conditionsOfUse": {
      "type": "string"
    },
    "licenseWebsite": {
      "type": "string"
    },
    "license": {
      "type": "string"
    },
    "derogation": {
      "type": "string"
    },
    "contributors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "role": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "entity": {
            "type": "object"
          }
        }
      }
    },
    "creationLocations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "creationDate": {
      "type": "string"
    },
    "publicationDate": {
      "type": "string"
    },
    "corporaType": {
      "type": "string"
    },
    "corporaLanguages": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "corporaStyles": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "annotationLevels": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "corporaFormats": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "corporaFileEncodings": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "corporaDataTypes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "corporaLanguageType": {
      "type": "string"
    },
    "wordCount": {
      "type": "string"
    },
    "linguisticDataType": {
      "type": "string"
    },
    "discourseTypes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "linguisticSubjects": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "programmingLanguages": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "operatingSystems": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "toolSupport": {
      "type": "string"
    },
    "navigationLanguages": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "toolLanguages": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "toolFunctionalities": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "toolInputData": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "toolOutputData": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "toolFileEncodings": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "toolId": {
      "type": "string"
    },
    "toolUrl": {
      "type": "string"
    },
    "toolHelp": {
      "type": "string"
    },
    "lexiconInputType": {
      "type": "string"
    },
    "lexiconInputLanguages": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "lexiconInputCount": {
      "type": "string"
    },
    "lexiconDescriptionTypes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "lexiconDescriptionLanguages": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "lexiconLanguageType": {
      "type": "string"
    },
    "lexiconFormats": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "applicationUrl": {
      "type": "string"
    }
  },
  "required": [
    "type",
    "title",
    "description",
    "statusOfUse"
  ]
}