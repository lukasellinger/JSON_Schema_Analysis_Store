    "https:__drafts.opds.io_schema_acquisition-object.schema.json": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "OPDS Acquisition Object",
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "child": {
          "type": "array",
          "items": {
