{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Capacity plan results with plan status",
  "type": "object",
  "properties": {
    "results": {
      "type": "array",
      "items": [
        {
          "$ref": "#/definitions/capacity-plan-result.json"
        }
      ]
    },
    "status": {
      "type": "string"
    },
    "status_message": {
      "type": "string"
    }
  },
  "definitions": {
    "capacity-plan-result.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Capacity plan result",
      "type": "object",
      "properties": {
        "location_id": {
          "type": "integer"
        },
        "sla_status": {
          "type": "string"
        },
        "sla_result": {
          "$ref": "#/definitions/appsla.json"
        },
        "SetConfigs": {
          "type": "array",
          "items": [
            {
              "$ref": "#/definitions/setconfig.json"
            }
          ]
        }
      }
    },
    "appsla.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "AppSla",
      "type": "object",
      "properties": {
        "cost": {
          "type": "number"
        },
        "currency_type": {
          "type": "string"
        },
        "latency": {
          "type": "number"
        },
        "error_rate": {
          "type": "number"
        },
        "status": {
          "type": "string"
        }
      },
      "required": [
        "cost",
        "currency_type",
        "latency",
        "error_rate"
      ]
    },
    "setconfig.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "SetConfig",
      "type": "object",
      "properties": {
        "kind": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "replicas": {
          "type": "integer"
        }
      },
      "required": [
        "name",
        "replicas",
        "kind"
      ]
    }
  }
}