    "contents_contact": {
      "properties": {
        "type": {
          "enum": [
            "contact"
          ]
        },
        "addressee": {
          "type": "string"
        },
        "email": {
          "$ref": "#/definitions/mailaddress"
        },
        "telephone": {
          "$ref": "#/definitions/phonenumber"
        },
        "formatted_address": {
          "type": "string"
        },
        "faxNumber": {
