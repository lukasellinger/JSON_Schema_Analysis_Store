{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Network Configuration",
  "description": "Control network modes",
  "properties": {
    "configuration": {
      "type": "object",
      "title": "Configuration",
      "description": "",
      "format": "table",
      "properties": {
        "mode": {
          "type": "string",
          "minLength": 1,
          "title": "Network Mode",
          "description": "Hotspot starts a private wifi hotspot, Home tries to connect to an existing wifi network.",
          "default": "HOME",
          "enum": [
            "HOME",
            "HOTSPOT"
          ]
        },
        "hostname": {
          "type": "string",
          "minLength": 4,
          "title": "Hostname",
          "description": "The hostname of this server, usually your boatname",
          "default": "raspberrypi",
          "format": "simpletext",
          "options": {
            "input_width": "200px"
          }
        },
        "ssid": {
          "type": "string",
          "minLength": 4,
          "title": "Hotspot Name",
          "description": "The hotspot name",
          "default": "freeboard",
          "format": "simpletext",
          "options": {
            "input_width": "200px"
          }
        },
        "password": {
          "type": "string",
          "minLength": 8,
          "title": "Hotspot Password",
          "description": "The password for the hotspot",
          "default": "raspberrypi",
          "options": {
            "input_width": "200px"
          }
        },
        "roam": {
          "type": "object",
          "title": "Roam",
          "description": "Define hotspots to connect with",
          "options": {
            "remove_empty_properties": true
          },
          "properties": {
            "networks": {
              "type": "array",
              "uniqueItems": true,
              "title": "Networks",
              "description": "Auto-connect to these networks when in range. \u003cbr/\u003eSSID: The hotspot name, eg myHomeWifi,\u003cbr/\u003ePassphrase: the access passphrase",
              "format": "table",
              "items": {
                "type": "object",
                "title": "Hotspot",
                "description": "The wifi network to auto-connect",
                "format": "grid",
                "properties": {
                  "ssid": {
                    "type": "string",
                    "minLength": 1,
                    "title": "SSID",
                    "format": "simpletext",
                    "options": {
                      "input_width": "200px"
                    }
                  },
                  "password": {
                    "type": "string",
                    "minLength": 1,
                    "title": "WPA2 Passphrase",
                    "options": {
                      "input_width": "200px"
                    }
                  }
                },
                "required": [
                  "ssid",
                  "password"
                ]
              },
              "required": [
                "networks"
              ]
            }
          }
        }
      },
      "required": [
        "mode",
        "hostname",
        "ssid",
        "password",
        "roam"
      ]
    }
  },
  "id": "/",
  "required": [
    "configuration"
  ]
}