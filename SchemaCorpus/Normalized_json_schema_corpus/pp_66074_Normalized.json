{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "UpdateHub package metadata schema",
  "description": "This schema formalizes the package metadata used by UpdateHub services",
  "type": "object",
  "properties": {
    "product": {
      "description": "The id of the product that will be updated. It must be a hexadecimal number of 64 digits",
      "$ref": "#/definitions/definitions.json_sha256sum"
    },
    "version": {
      "description": "Version of the software installed on device AFTER updating",
      "type": "string",
      "minLength": 1
    },
    "supported-hardware": {
      "description": "A list of hardware identifiers compatible with this package. You can provide a string \u0027any\u0027 to specify that any hardware is compatible.",
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        {
          "type": "string",
          "enum": [
            "any"
          ]
        }
      ]
    },
    "objects": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "oneOf": [
            {
              "$ref": "#/definitions/copy-object.json"
            },
            {
              "$ref": "#/definitions/flash-object.json"
            },
            {
              "$ref": "#/definitions/imxkobs-object.json"
            },
            {
              "$ref": "#/definitions/raw-object.json"
            },
            {
              "$ref": "#/definitions/tarball-object.json"
            },
            {
              "$ref": "#/definitions/ubifs-object.json"
            }
          ]
        },
        "minItems": 1
      },
      "minItems": 1,
      "maxItems": 2
    }
  },
  "required": [
    "objects",
    "product",
    "supported-hardware",
    "version"
  ],
  "additionalProperties": false,
  "definitions": {
    "definitions.json_sha256sum": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "copy-object.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Copy object",
      "description": "Object specifications for COPY mode",
      "type": "object",
      "properties": {
        "mode": {
          "$ref": "#/definitions/definitions.json_mode"
        },
        "filename": {
          "$ref": "#/definitions/definitions.json_filename"
        },
        "size": {
          "$ref": "#/definitions/definitions.json_size"
        },
        "sha256sum": {
          "$ref": "#/definitions/definitions.json_sha256sum"
        },
        "install-if-different": {
          "$ref": "#/definitions/install-if-different.json"
        },
        "target-type": {
          "description": "The type of target (only device)",
          "type": "string",
          "enum": [
            "device"
          ]
        },
        "target-mode": {
          "description": "The mode which the target will have after installed",
          "type": "string",
          "pattern": "^[0-9]{4}$"
        },
        "target-uid": {
          "description": "The UNIX user ID to be set in target when installed",
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "integer"
            }
          ]
        },
        "target-gid": {
          "description": "The UNIX group ID to be set in target when installed",
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "integer"
            }
          ]
        },
        "target": {
          "$ref": "#/definitions/definitions.json_target"
        },
        "compressed": {
          "$ref": "#/definitions/definitions.json_compressed"
        },
        "required-uncompressed-size": {
          "$ref": "#/definitions/definitions.json_required-uncompressed-size"
        },
        "filesystem": {
          "$ref": "#/definitions/definitions.json_filesystem"
        },
        "target-path": {
          "$ref": "#/definitions/definitions.json_target-path"
        },
        "format?": {
          "$ref": "#/definitions/definitions.json_format?"
        },
        "format-options": {
          "$ref": "#/definitions/definitions.json_format-options"
        },
        "mount-options": {
          "$ref": "#/definitions/definitions.json_mount-options"
        }
      },
      "required": [
        "filename",
        "filesystem",
        "mode",
        "sha256sum",
        "size",
        "target-type",
        "target",
        "target-path"
      ],
      "additionalProperties": false,
      "dependencies": {
        "target-gid": [
          "target-uid"
        ],
        "target-uid": [
          "target-gid"
        ],
        "mode": {
          "properties": {
            "mode": {
              "enum": [
                "copy"
              ]
            }
          }
        },
        "format-options": {
          "properties": {
            "format?": {
              "enum": [
                true
              ]
            }
          },
          "required": [
            "format?"
          ]
        }
      }
    },
    "definitions.json_mode": {
      "description": "Represents the install mode for the object data",
      "type": "string",
      "enum": [
        "copy",
        "flash",
        "imxkobs",
        "raw",
        "tarball",
        "ubifs"
      ]
    },
    "definitions.json_filename": {
      "description": "file name used by client to rebuild the commit",
      "type": "string",
      "minLength": 1
    },
    "definitions.json_size": {
      "description": "Total size of the object in bytes",
      "type": "integer",
      "minimum": 0
    },
    "install-if-different.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Object install-if-different property",
      "description": "This property handles when an object should be installed on target",
      "oneOf": [
        {
          "title": "sha256sum verification type",
          "description": "Installs if sha256sum doesn\u0027t match",
          "type": "string",
          "enum": [
            "sha256sum"
          ]
        },
        {
          "title": "Known patterns verification type",
          "description": "Installs if version of know object type is different",
          "type": "object",
          "properties": {
            "version": {
              "type": "string"
            },
            "pattern": {
              "type": "string",
              "enum": [
                "linux-kernel",
                "u-boot"
              ]
            }
          },
          "required": [
            "version",
            "pattern"
          ],
          "additionalProperties": false
        },
        {
          "title": "Custom pattern verification type",
          "description": "Installs if version of unknow object type is different",
          "type": "object",
          "properties": {
            "version": {
              "type": "string"
            },
            "pattern": {
              "type": "object",
              "properties": {
                "regexp": {
                  "description": "the pattern to match",
                  "type": "string"
                },
                "seek": {
                  "description": "Where to start reading file.",
                  "type": "integer",
                  "default": 0
                },
                "buffer-size": {
                  "description": "How much bytes must be read. If -1, until the end.",
                  "type": "integer",
                  "default": -1
                }
              },
              "additionalProperties": false,
              "required": [
                "regexp"
              ]
            }
          },
          "additionalProperties": false,
          "required": [
            "version",
            "pattern"
          ]
        }
      ]
    },
    "definitions.json_target": {
      "description": "The target itself",
      "type": "string",
      "minLength": 1
    },
    "definitions.json_compressed": {
      "description": "If the object is a compressed file or not",
      "type": "boolean"
    },
    "definitions.json_required-uncompressed-size": {
      "description": "Number of bytes required for installing the object",
      "type": "integer",
      "minimum": 0
    },
    "definitions.json_filesystem": {
      "description": "Filesystem type that must be used to mount device",
      "type": "string",
      "enum": [
        "btrfs",
        "ext2",
        "ext3",
        "ext4",
        "vfat",
        "f2fs",
        "jffs2",
        "ubifs",
        "xfs"
      ]
    },
    "definitions.json_target-path": {
      "description": "Target path on which the object must be installed to (e.g., /vmlinuz). This is relative to the mount point. Field present when mode equals to copy or tarball",
      "type": "string"
    },
    "definitions.json_format?": {
      "description": "Specifies whether the device should be formatted",
      "type": "boolean",
      "default": false
    },
    "definitions.json_format-options": {
      "description": "Options to format device",
      "type": "string"
    },
    "definitions.json_mount-options": {
      "description": "Options to mount the filesystem in device",
      "type": "string"
    },
    "flash-object.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Flash object",
      "description": "Object specifications for Flash mode",
      "type": "object",
      "properties": {
        "mode": {
          "$ref": "#/definitions/definitions.json_mode"
        },
        "filename": {
          "$ref": "#/definitions/definitions.json_filename"
        },
        "size": {
          "$ref": "#/definitions/definitions.json_size"
        },
        "sha256sum": {
          "$ref": "#/definitions/definitions.json_sha256sum"
        },
        "install-if-different": {
          "$ref": "#/definitions/install-if-different.json"
        },
        "target-type": {
          "description": "The type of target (device or mtdname)",
          "type": "string",
          "enum": [
            "device",
            "mtdname"
          ]
        },
        "target": {
          "$ref": "#/definitions/definitions.json_target"
        }
      },
      "required": [
        "filename",
        "mode",
        "size",
        "sha256sum",
        "target-type",
        "target"
      ],
      "additionalProperties": false,
      "dependencies": {
        "mode": {
          "properties": {
            "mode": {
              "enum": [
                "flash"
              ]
            }
          }
        }
      }
    },
    "imxkobs-object.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "imxkobs object",
      "description": "Object specifications for imxkobs mode",
      "type": "object",
      "properties": {
        "mode": {
          "$ref": "#/definitions/definitions.json_mode"
        },
        "filename": {
          "$ref": "#/definitions/definitions.json_filename"
        },
        "size": {
          "$ref": "#/definitions/definitions.json_size"
        },
        "sha256sum": {
          "$ref": "#/definitions/definitions.json_sha256sum"
        },
        "1k_padding": {
          "$ref": "#/definitions/definitions.json_1k_padding"
        },
        "search_exponent": {
          "$ref": "#/definitions/definitions.json_search_exponent"
        },
        "chip_0_device_path": {
          "$ref": "#/definitions/definitions.json_chip_0_device_path"
        },
        "chip_1_device_path": {
          "$ref": "#/definitions/definitions.json_chip_1_device_path"
        },
        "install-if-different": {
          "$ref": "#/definitions/install-if-different.json"
        }
      },
      "required": [
        "filename",
        "mode",
        "size",
        "sha256sum"
      ],
      "additionalProperties": false,
      "dependencies": {
        "mode": {
          "properties": {
            "mode": {
              "enum": [
                "imxkobs"
              ]
            }
          }
        }
      }
    },
    "definitions.json_1k_padding": {
      "description": "If 1k-padding should be added in the head",
      "type": "boolean"
    },
    "definitions.json_search_exponent": {
      "description": "The search exponent",
      "type": "integer"
    },
    "definitions.json_chip_0_device_path": {
      "description": "The device path of Chip 0",
      "type": "string"
    },
    "definitions.json_chip_1_device_path": {
      "type": "string"
    },
    "raw-object.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Raw object",
      "description": "Object specifications for RAW mode",
      "type": "object",
      "properties": {
        "mode": {
          "$ref": "#/definitions/definitions.json_mode"
        },
        "filename": {
          "$ref": "#/definitions/definitions.json_filename"
        },
        "size": {
          "$ref": "#/definitions/definitions.json_size"
        },
        "sha256sum": {
          "$ref": "#/definitions/definitions.json_sha256sum"
        },
        "install-if-different": {
          "$ref": "#/definitions/install-if-different.json"
        },
        "target-type": {
          "description": "The type of target (only device)",
          "type": "string",
          "enum": [
            "device"
          ]
        },
        "target": {
          "$ref": "#/definitions/definitions.json_target"
        },
        "compressed": {
          "$ref": "#/definitions/definitions.json_compressed"
        },
        "required-uncompressed-size": {
          "$ref": "#/definitions/definitions.json_required-uncompressed-size"
        },
        "chunk-size": {
          "$ref": "#/definitions/definitions.json_chunk-size"
        },
        "skip": {
          "$ref": "#/definitions/definitions.json_skip"
        },
        "seek": {
          "$ref": "#/definitions/definitions.json_seek"
        },
        "count": {
          "$ref": "#/definitions/definitions.json_count"
        },
        "truncate": {
          "$ref": "#/definitions/definitions.json_truncate"
        }
      },
      "required": [
        "filename",
        "mode",
        "sha256sum",
        "size",
        "target",
        "target-type"
      ],
      "additionalProperties": false,
      "dependencies": {
        "mode": {
          "properties": {
            "mode": {
              "enum": [
                "raw"
              ]
            }
          }
        }
      }
    },
    "definitions.json_chunk-size": {
      "description": "The size of the buffers (in bytes) used to read and write (default is 128KiB).",
      "type": "integer",
      "default": 131072,
      "minimum": 0
    },
    "definitions.json_skip": {
      "description": "How many chunk-size blocks must be skipped in the source file",
      "type": "integer",
      "default": 0,
      "minimum": 0
    },
    "definitions.json_seek": {
      "description": "How many chunk-size blocks must be skipped in the target file",
      "type": "integer",
      "default": 0,
      "minimum": 0
    },
    "definitions.json_count": {
      "description": "How many chunk-size blocks must be copied from the source file to the target. The default value of -1 means all possible bytes until the end of the file",
      "type": "integer",
      "default": -1,
      "minimum": -1
    },
    "definitions.json_truncate": {
      "description": "True if the file pointed to by the target_path should be open in truncate mode (erase content before writing)",
      "type": "boolean",
      "default": true
    },
    "tarball-object.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Copy object",
      "description": "Object specifications for COPY mode",
      "type": "object",
      "properties": {
        "mode": {
          "$ref": "#/definitions/definitions.json_mode"
        },
        "filename": {
          "$ref": "#/definitions/definitions.json_filename"
        },
        "size": {
          "$ref": "#/definitions/definitions.json_size"
        },
        "sha256sum": {
          "$ref": "#/definitions/definitions.json_sha256sum"
        },
        "target-type": {
          "description": "The type of target (device, mtdname or ubivolume)",
          "type": "string",
          "enum": [
            "device",
            "mtdname",
            "ubivolume"
          ]
        },
        "target": {
          "$ref": "#/definitions/definitions.json_target"
        },
        "compressed": {
          "$ref": "#/definitions/definitions.json_compressed"
        },
        "required-uncompressed-size": {
          "$ref": "#/definitions/definitions.json_required-uncompressed-size"
        },
        "filesystem": {
          "$ref": "#/definitions/definitions.json_filesystem"
        },
        "target-path": {
          "$ref": "#/definitions/definitions.json_target-path"
        },
        "format?": {
          "$ref": "#/definitions/definitions.json_format?"
        },
        "format-options": {
          "$ref": "#/definitions/definitions.json_format-options"
        },
        "mount-options": {
          "$ref": "#/definitions/definitions.json_mount-options"
        }
      },
      "required": [
        "filename",
        "filesystem",
        "mode",
        "sha256sum",
        "size",
        "target",
        "target-path",
        "target-type"
      ],
      "additionalProperties": false,
      "dependencies": {
        "mode": {
          "properties": {
            "mode": {
              "enum": [
                "tarball"
              ]
            }
          }
        },
        "format-options": {
          "properties": {
            "format?": {
              "enum": [
                true
              ]
            }
          },
          "required": [
            "format?"
          ]
        }
      }
    },
    "ubifs-object.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "UBI object",
      "description": "Object specifications for UBI mode",
      "type": "object",
      "properties": {
        "mode": {
          "$ref": "#/definitions/definitions.json_mode"
        },
        "filename": {
          "$ref": "#/definitions/definitions.json_filename"
        },
        "target-type": {
          "description": "The type of target (only ubivolume)",
          "type": "string",
          "enum": [
            "ubivolume"
          ]
        },
        "target": {
          "$ref": "#/definitions/definitions.json_target"
        },
        "size": {
          "$ref": "#/definitions/definitions.json_size"
        },
        "compressed": {
          "$ref": "#/definitions/definitions.json_compressed"
        },
        "required-uncompressed-size": {
          "$ref": "#/definitions/definitions.json_required-uncompressed-size"
        },
        "sha256sum": {
          "$ref": "#/definitions/definitions.json_sha256sum"
        }
      },
      "required": [
        "filename",
        "mode",
        "size",
        "sha256sum",
        "target",
        "target-type"
      ],
      "additionalProperties": false,
      "dependencies": {
        "mode": {
          "properties": {
            "mode": {
              "enum": [
                "ubifs"
              ]
            }
          }
        },
        "required-uncompressed-size": {
          "properties": {
            "compressed": {
              "enum": [
                true
              ]
            }
          }
        }
      }
    }
  }
}