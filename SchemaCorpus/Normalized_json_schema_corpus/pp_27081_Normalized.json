{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Data Package",
  "description": "Data Package is a simple specification for data access and delivery.",
  "type": "object",
  "required": [
    "name"
  ],
  "properties": {
    "name": {
      "$ref": "#/definitions/definitions.json_define_name",
      "propertyOrder": 10
    },
    "title": {
      "$ref": "#/definitions/definitions.json_define_title",
      "propertyOrder": 20
    },
    "description": {
      "$ref": "#/definitions/definitions.json_define_description",
      "format": "textarea",
      "propertyOrder": 30
    },
    "homepage": {
      "$ref": "#/definitions/definitions.json_define_homepage",
      "propertyOrder": 40
    },
    "version": {
      "$ref": "#/definitions/definitions.json_define_version",
      "propertyOrder": 50
    },
    "license": {
      "$ref": "#/definitions/definitions.json_define_license",
      "propertyOrder": 60
    },
    "author": {
      "$ref": "#/definitions/definitions.json_define_author",
      "propertyOrder": 70
    },
    "contributors": {
      "$ref": "#/definitions/definitions.json_define_contributors",
      "propertyOrder": 80,
      "options": {
        "hidden": true
      }
    },
    "resources": {
      "title": "Resources",
      "description": "The data resources that this package describes.",
      "type": "array",
      "propertyOrder": 90,
      "minItems": 0,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "$ref": "#/definitions/definitions.json_define_name",
            "propertyOrder": 10
          },
          "title": {
            "$ref": "#/definitions/definitions.json_define_title",
            "propertyOrder": 20
          },
          "description": {
            "$ref": "#/definitions/definitions.json_define_description",
            "propertyOrder": 30,
            "format": "textarea"
          },
          "schema": {
            "$ref": "#/definitions/definitions.json_define_schema",
            "propertyOrder": 40
          },
          "url": {
            "$ref": "#/definitions/definitions.json_define_url",
            "propertyOrder": 50
          },
          "path": {
            "$ref": "#/definitions/definitions.json_define_path",
            "propertyOrder": 60
          },
          "data": {
            "$ref": "#/definitions/definitions.json_define_data",
            "propertyOrder": 70
          },
          "format": {
            "$ref": "#/definitions/definitions.json_define_format",
            "propertyOrder": 80
          },
          "mediatype": {
            "$ref": "#/definitions/definitions.json_define_mediatype",
            "propertyOrder": 90
          },
          "encoding": {
            "$ref": "#/definitions/definitions.json_define_encoding",
            "propertyOrder": 100
          },
          "bytes": {
            "$ref": "#/definitions/definitions.json_define_bytes",
            "propertyOrder": 110,
            "options": {
              "hidden": true
            }
          },
          "hash": {
            "$ref": "#/definitions/definitions.json_define_hash",
            "propertyOrder": 120,
            "options": {
              "hidden": true
            }
          },
          "dialect": {
            "$ref": "#/definitions/definitions.json_define_dialect",
            "propertyOrder": 130,
            "options": {
              "hidden": true
            }
          },
          "sources": {
            "$ref": "#/definitions/definitions.json_define_sources",
            "propertyOrder": 140,
            "options": {
              "hidden": true
            }
          },
          "license": {
            "$ref": "#/definitions/definitions.json_define_license",
            "description": "The license under which the resource is published.",
            "propertyOrder": 150,
            "options": {
              "hidden": true
            }
          }
        },
        "anyOf": [
          {
            "title": "url required",
            "required": [
              "url"
            ]
          },
          {
            "title": "path required",
            "required": [
              "path"
            ]
          },
          {
            "title": "data required",
            "required": [
              "data"
            ]
          }
        ]
      }
    },
    "keywords": {
      "$ref": "#/definitions/definitions.json_define_keywords",
      "propertyOrder": 100
    },
    "sources": {
      "$ref": "#/definitions/definitions.json_define_sources",
      "propertyOrder": 110,
      "options": {
        "hidden": true
      }
    },
    "image": {
      "$ref": "#/definitions/definitions.json_define_image",
      "propertyOrder": 120,
      "options": {
        "hidden": true
      }
    },
    "base": {
      "$ref": "#/definitions/definitions.json_define_base",
      "propertyOrder": 130,
      "options": {
        "hidden": true
      }
    },
    "dataDependencies": {
      "$ref": "#/definitions/definitions.json_define_dataDependencies",
      "propertyOrder": 140,
      "options": {
        "hidden": true
      }
    }
  },
  "definitions": {
    "definitions.json_define_name": {
      "title": "Name",
      "description": "An identifier for this package. Lower case characters with \u0027.\u0027, \u0027_\u0027 and \u0027-\u0027 are allowed.",
      "type": "string",
      "pattern": "^([a-z0-9._-])+$"
    },
    "definitions.json_define_title": {
      "title": "Title",
      "description": "A human-readable title.",
      "type": "string"
    },
    "definitions.json_define_description": {
      "title": "Description",
      "description": "A text description.",
      "type": "string"
    },
    "definitions.json_define_homepage": {
      "title": "Home Page",
      "description": "The URL for this data package\u0027s website.",
      "type": "string"
    },
    "definitions.json_define_version": {
      "title": "Version",
      "description": "A unique version number for this package.",
      "type": "string"
    },
    "definitions.json_define_license": {
      "title": "License",
      "description": "The license under which this package is published.",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "url": {
              "type": "string"
            }
          },
          "anyOf": [
            {
              "title": "type required",
              "required": [
                "type"
              ]
            },
            {
              "title": "url required",
              "required": [
                "url"
              ]
            }
          ]
        }
      ]
    },
    "definitions.json_define_author": {
      "title": "Author",
      "description": "The main contributor to this package.",
      "type": "string"
    },
    "definitions.json_define_contributors": {
      "title": "Contributors",
      "description": "The contributors to this package.",
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "web": {
                "type": "string"
              }
            },
            "required": [
              "name"
            ]
          }
        ]
      }
    },
    "definitions.json_define_schema": {
      "title": "Schema",
      "description": "The JSON Table Schema that describes of this resource.",
      "type": "object",
      "properties": {
        "fields": {
          "type": "array",
          "minItems": 0,
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "propertyOrder": 10
              },
              "title": {
                "type": "string",
                "propertyOrder": 20
              },
              "description": {
                "type": "string",
                "propertyOrder": 30
              },
              "type": {
                "type": "string",
                "enum": [
                  "string",
                  "number",
                  "integer",
                  "boolean",
                  "object",
                  "null",
                  "array",
                  "datetime",
                  "date",
                  "time",
                  "duration",
                  "geopoint",
                  "geojson",
                  "any"
                ],
                "propertyOrder": 40
              },
              "format": {
                "type": "string",
                "propertyOrder": 50
              }
            }
          }
        }
      }
    },
    "definitions.json_define_url": {
      "title": "URL",
      "description": "The URL for this resource.",
      "type": "string"
    },
    "definitions.json_define_path": {
      "title": "Path",
      "description": "The relative path to this resource.",
      "type": "string"
    },
    "definitions.json_define_data": {
      "title": "Data",
      "description": "The inline data for this resource.",
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array"
        },
        {
          "type": "object"
        }
      ]
    },
    "definitions.json_define_format": {
      "title": "Format",
      "description": "The file format of this resource.",
      "type": "string"
    },
    "definitions.json_define_mediatype": {
      "title": "Media Type",
      "description": "The media type of this resource.",
      "type": "string",
      "pattern": "^(.+)/(.+)$"
    },
    "definitions.json_define_encoding": {
      "title": "Encoding",
      "description": "The file encoding of this resource.",
      "type": "string"
    },
    "definitions.json_define_bytes": {
      "title": "Bytes",
      "description": "The size of this resource in bytes.",
      "type": "integer"
    },
    "definitions.json_define_hash": {
      "title": "Hash",
      "type": "string",
      "description": "The MD5 hash of this resource. Indicate other hashing algorithms with the {algorithm}:{hash} format.",
      "pattern": "^([^:]+:[a-fA-F0-9]+|[a-fA-F0-9]{32}|)$"
    },
    "definitions.json_define_dialect": {
      "title": "Dialect",
      "description": "The dialect of this resource file type.",
      "type": "object"
    },
    "definitions.json_define_sources": {
      "title": "Sources",
      "description": "The raw sources for this resource.",
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "web": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        },
        "anyOf": [
          {
            "title": "name required",
            "required": [
              "name"
            ]
          },
          {
            "title": "web required",
            "required": [
              "web"
            ]
          },
          {
            "title": "email required",
            "required": [
              "email"
            ]
          }
        ]
      }
    },
    "definitions.json_define_keywords": {
      "title": "Keywords",
      "description": "A list of keywords that describe this package.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "definitions.json_define_image": {
      "title": "Image",
      "description": "A image to represent this package.",
      "type": "string"
    },
    "definitions.json_define_base": {
      "title": "Base",
      "description": "A base URI or path for resource paths in this package.",
      "type": "string"
    },
    "definitions.json_define_dataDependencies": {
      "title": "Data Dependencies",
      "description": "Additional Data Packages required to install this package.",
      "type": "object"
    }
  }
}