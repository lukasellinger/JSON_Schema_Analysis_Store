{
  "id": "https://raw.githubusercontent.com/eviratec/schema/master/v1/customer.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "schema for a customer",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "contact",
    "accounts",
    "date_opened",
    "is_suspended"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "contact": {
      "$ref": "#/definitions/contact.json"
    },
    "accounts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/customer\\account.json"
      },
      "uniqueItems": true
    },
    "additional_contacts": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/contact.json"
      },
      "uniqueItems": true
    },
    "date_opened": {
      "type": "string",
      "format": "date-time"
    },
    "is_suspended": {
      "type": "boolean",
      "value": false
    }
  },
  "definitions": {
    "contact.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "description": "schema for a contact",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "person",
        "date_entered",
        "is_flagged"
      ],
      "properties": {
        "person": {
          "$ref": "#/definitions/contact\\person.json"
        },
        "unread_messages": {
          "type": "number",
          "minValue": 0
        },
        "date_entered": {
          "type": "string",
          "format": "date-time"
        },
        "date_last_seen": {
          "type": "string",
          "format": "date-time"
        },
        "is_flagged": {
          "type": "boolean",
          "value": false
        }
      }
    },
    "contact\\person.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "description": "schema for a contact person",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "email"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string"
        }
      }
    },
    "customer\\account.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "description": "schema for a customer account",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "customer_id",
        "balance"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "customer_id": {
          "type": "string",
          "format": "uuid"
        },
        "balance": {
          "type": "object",
          "allOf": [
            {
              "type": "object",
              "required": [
                "in"
              ],
              "properties": {
                "in": {
                  "enum": [
                    "cr",
                    "dr"
                  ]
                }
              }
            },
            {
              "$ref": "#/definitions/currency\\amount.json"
            }
          ]
        }
      }
    },
    "currency\\amount.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "description": "schema for a currency amount",
      "type": "object",
      "required": [
        "currency",
        "units"
      ],
      "properties": {
        "currency": {
          "$ref": "#/definitions/currency.json"
        },
        "units": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "currency.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "description": "schema for a currency",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "code",
        "label",
        "separator"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "code": {
          "type": "string",
          "maxLength": 4
        },
        "label": {
          "type": "string",
          "maxLength": 64
        },
        "prefix": {
          "type": "string",
          "maxLength": 1
        },
        "separator": {
          "type": "object",
          "required": [
            "thousands",
            "decimal"
          ],
          "properties": {
            "thousands": {
              "type": "string",
              "minLength": 1,
              "maxLength": 1
            },
            "decimal": {
              "type": "string",
              "minLength": 1,
              "maxLength": 1
            }
          }
        }
      }
    }
  }
}