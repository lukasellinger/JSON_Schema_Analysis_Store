{
  "name": "iFlux thermometer",
  "public": true,
  "organizationId": 1,
  "configuration": {
    "schema": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "properties": {
        "sensorId": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "sensorId"
      ]
    },
    "url": "http://some.cool.weather.service/configuration",
    "token": "\u003cJSON Web Token\u003e"
  },
  "configurationUi": {
    "schemaForm": [
      "sensorId",
      {
        "type": "submit",
        "style": "btn-primary",
        "title": "Submit"
      }
    ]
  }
}