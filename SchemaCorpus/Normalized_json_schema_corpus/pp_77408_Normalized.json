{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Categories List",
  "type": "object",
  "required": [
    "offset",
    "count",
    "total",
    "results"
  ],
  "properties": {
    "offset": {
      "$ref": "#/definitions/offset.schema.json"
    },
    "count": {
      "$ref": "#/definitions/count.schema.json"
    },
    "total": {
      "$ref": "#/definitions/total.schema.json"
    },
    "results": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/category.schema.json"
      }
    }
  },
  "definitions": {
    "offset.schema.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "number",
      "description": "Number of results skipped"
    },
    "count.schema.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "number",
      "description": "Number of results in this page"
    },
    "total.schema.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "number",
      "description": "Total number of matching results"
    },
    "category.schema.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Category",
      "type": "object",
      "required": [
        "id",
        "version",
        "name",
        "slug",
        "createdAt",
        "lastModifiedAt",
        "ancestors"
      ],
      "properties": {
        "id": {
          "$ref": "#/definitions/id.schema.json"
        },
        "version": {
          "$ref": "#/definitions/version.schema.json"
        },
        "name": {
          "$ref": "#/definitions/localized-string.schema.json"
        },
        "slug": {
          "$ref": "#/definitions/localized-string-slug.schema.json"
        },
        "description": {
          "$ref": "#/definitions/localized-string.schema.json"
        },
        "ancestors": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/reference-category.schema.json"
          }
        },
        "parent": {
          "$ref": "#/definitions/reference-category.schema.json"
        },
        "orderHint": {
          "type": "string",
          "description": "An attribute as base for a custom category order in one level",
          "pattern": "^0\\.\\d+$"
        },
        "externalId": {
          "$ref": "#/definitions/external-id.schema.json"
        },
        "createdAt": {
          "$ref": "#/definitions/created-at.schema.json"
        },
        "lastModifiedAt": {
          "$ref": "#/definitions/last-modified-at.schema.json"
        }
      }
    },
    "id.schema.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "string",
      "description": "The unique ID of this object"
    },
    "version.schema.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "number",
      "description": "The current version"
    },
    "localized-string.schema.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "LocalizedString",
      "description": "A localized string is a JSON object where the keys are ISO language tags, and the values the corresponding strings used for that language",
      "type": "object",
      "patternProperties": {
        "^[a-z]{2}$": {
          "type": "string",
          "description": "The value for this language"
        }
      }
    },
    "localized-string-slug.schema.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "LocalizedString",
      "description": "A localized string is a JSON object where the keys are ISO language tags, and the values the corresponding strings used for that language",
      "type": "object",
      "patternProperties": {
        "^[a-z]{2}$": {
          "type": "string",
          "description": "The slug for this language",
          "pattern": "^[-a-zA-Z0-9_]{2,64}$"
        }
      }
    },
    "reference-category.schema.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Reference (Category)",
      "description": "A `Reference` is a JSON object representing a (loose) reference to another resource on SPHERE.IO platform",
      "type": "object",
      "properties": {
        "typeId ": {
          "type": "string",
          "description": "The typeId designates the type of the referenced resource",
          "enum": [
            "category"
          ]
        },
        "id": {
          "type": "string",
          "description": "The unique ID of the referenced resource"
        }
      }
    },
    "external-id.schema.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "string",
      "description": "Optional ID defined in some external system"
    },
    "created-at.schema.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "string",
      "format": "date-time",
      "description": "Date of the creation"
    },
    "last-modified-at.schema.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "string",
      "format": "date-time",
      "description": "Date of last modification"
    }
  }
}