{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://raw.githubusercontent.com/helpwanted/helpwanted/master/helpwanted.schema.json",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "technologies": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "needs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "resources": {
      "type": "object",
      "required": [
        "people",
        "repository"
      ],
      "properties": {
        "people": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "email"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            },
            "additionalProperties": {
              "type": "string"
            }
          }
        },
        "bugs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "mailinglist": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "security": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "repository": {
          "type": "string"
        },
        "homepage": {
          "type": "string"
        }
      }
    }
  },
  "required": [
    "technologies",
    "skills",
    "resources"
  ]
}