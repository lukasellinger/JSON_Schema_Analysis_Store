    {
      "type": "object",
      "properties": {
        "subCategory": {
          "type": "string",
          "anyOf": [
            {
              "enum": [
                "trafficJam",
                "carAccident",
                "carWrongDirection",
                "carStopped",
                "pothole",
                "roadClosed",
                "roadWorks",
                "hazardOnRoad",
                "injuredBiker",
                "flood",
                "tsunami",
                "coastalEvent",
                "earthquake",
                "rainfall",
                "highTemperature",
                "lowTemperature",
                "heatWave",
                "coldWave",
                "ice",
                "snow",
                "wind",
                "fog",
                "tornado",
                "tropicalCyclone",
                "hurricane",
                "snow/ice",
                "thunderstorms",
                "fireRisk",
                "avalancheRisk",
                "floodRisk",
                "airPollution",
                "waterPollution",
                "pollenConcentration",
                "asthmaAttack",
                "bumpedPatient",
                "fallenPatient",
                "heartAttack",
                "suspiciousAction",
                "robbery",
                "assault",
                "civilDisorder",
                "buildingFire",
                "forestFire",
                "noxiousWeed",
                "snail",
                "insect",
                "rodent",
                "bacteria",
                "microbe",
                "fungus",
                "mite",
                "virus",
                "nematodes",
                "irrigation",
                "fertilisation"
              ]
