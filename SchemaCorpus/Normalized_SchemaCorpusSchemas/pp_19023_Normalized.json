{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "georectifiedRepresentation.json#",
  "type": "object",
  "title": "",
  "description": "A grid whose cells are regularly spaced in a geographic (i.e. lat/long) or map coordinate system defined in the SpatialReferencing System (SRS) so that any cell in the grid can be geolocated given its grid coordinates and the grid origin, cell spacing, and orientation.",
  "example": "../examples/georectifiedRepresentation.json",
  "required": [
    "gridRepresentation",
    "checkPointAvailable",
    "cornerPoints",
    "pointInPixel"
  ],
  "additionalProperties": true,
  "properties": {
    "gridRepresentation": {
      "$ref": "#/definitions/gridRepresentation.json"
    },
    "checkPointAvailable": {
      "type": "boolean",
      "description": "Idication of whether or not geographic position points are available to test the accuracy of the georeferenced grid data.",
      "translation": {},
      "default": false
    },
    "checkPointDescription": {
      "type": "string",
      "description": "Description of geographic positions points used to test the accuracy of the georeferenced grid data.",
      "translation": {}
    },
    "cornerPoints": {
      "description": "The earth location in the coordinate system defined by the Spatial Reference System and the grid coordinate of the cells at opposite ends of grid coverage along two diagonals in the grid spatial dimensions. Note: There are four corner points in a georectified grid; at least two corner points along one diagonal are required. The first corner point corresponds to the origin of the grid.",
      "translation": {},
      "oneOf": [
        {
          "type": "array",
          "title": "2 coordinate points",
          "description": "",
          "minItems": 2,
          "maxItems": 2,
          "items": {
            "$ref": "#/definitions/point"
          }
        },
        {
          "type": "array",
          "title": "4 coordinate points",
          "description": "",
          "minItems": 4,
          "maxItems": 4,
          "items": {
            "$ref": "#/definitions/point"
          }
        }
      ]
    },
    "centerPoint": {
      "description": "The earth location in the coordinate system defined by the Spatial Reference System and the grid coordinate of the cell halfway between opposite ends of the grid in the spatial dimensions.",
      "$ref": "#/definitions/point"
    },
    "pointInPixel": {
      "type": "string",
      "description": "Point in a pixel corresponding to the Earth location of the pixel.",
      "translation": {},
      "minLength": 1
    },
    "transformationDimensionDescription": {
      "type": "string",
      "description": "Point in a pixel corresponding to the Earth location of the pixel.",
      "translation": {}
    },
    "transformationDimensionMapping": {
      "type": "string",
      "description": "Point in a pixel corresponding to the Earth location of the pixel.",
      "translation": {}
    }
  },
  "definitions": {
    "point": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "number"
      }
    },
    "gridRepresentation.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "example": "../examples/gridRepresentation.json",
      "description": "Information about grid objects in the resource.",
      "translation": {
        "ISO 19115-2": [
          "MD_GridSpatialRepresentation"
        ]
      },
      "type": "object",
      "required": [
        "numberOfDimensions",
        "cellGeometry",
        "dimension"
      ],
      "additionalProperties": true,
      "properties": {
        "numberOfDimensions": {
          "type": "number",
          "description": "The number of independent spatial-temporal axes.",
          "translation": {
            "ISO 19115-2": [
              "MD_GridSpatialRepresentation \u003e numberOfDimensions"
            ]
          }
        },
        "dimension": {
          "type": "array",
          "description": "Information about spatial-temporal axis properties.",
          "translation": {
            "ISO 19115-2": [
              "MD_GridSpatialRepresentation \u003e axisDimensionProperties"
            ]
          },
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/gridRepresentation.json_definitions_dimension"
          }
        },
        "cellGeometry": {
          "type": "string",
          "description": "Identification of grid data as point or cell.",
          "translation": {
            "ISO 19115-2": [
              "MD_GridSpatialRepresentation \u003e cellGeometry"
            ]
          }
        },
        "transformationParameterAvailable": {
          "type": "boolean",
          "description": "An indication of whether or not parameters for transformation between image coordinates and geographic or map coordinates exist (are available).",
          "translation": {
            "ISO 19115-2": [
              "MD_GridSpatialRepresentation \u003e transformationParameterAvailability"
            ]
          },
          "default": false
        }
      },
      "definitions": {
        "dimension": {
          "type": "object",
          "required": [
            "dimensionType",
            "dimensionSize"
          ],
          "additionalProperties": true,
          "properties": {
            "dimensionType": {
              "type": "string",
              "description": "The type of dimension for this axis.",
              "translation": {
                "ISO 19115-2": [
                  "MD_GridSpatialRepresentation \u003e axisDimensionProperties \u003e MD_Dimension \u003e dimensionName \u003e MD_DimensionNameTypeCode"
                ]
              }
            },
            "dimensionSize": {
              "type": "integer",
              "description": "The number of elements along the axis.",
              "translation": {
                "ISO 19115-2": [
                  "MD_GridSpatialRepresentation \u003e axisDimensionProperties \u003e MD_Dimension \u003e dimensionSize"
                ]
              }
            },
            "resolution": {
              "$ref": "#/definitions/measure.json",
              "description": "The degree of detail in the grid.",
              "translation": {
                "ISO 19115-2": [
                  "MD_GridSpatialRepresentation \u003e axisDimensionProperties \u003e MD_Dimension \u003e resolution"
                ]
              }
            },
            "dimensionTitle": {
              "type": "string",
              "description": "The name of the axis.",
              "translation": {
                "ISO 19115-2": [
                  ""
                ]
              }
            },
            "dimensionDescription": {
              "type": "string",
              "description": "The description of the axis.",
              "translation": {
                "ISO 19115-2": [
                  ""
                ]
              }
            }
          }
        }
      }
    },
    "gridRepresentation.json_definitions_dimension": {
      "type": "object",
      "required": [
        "dimensionType",
        "dimensionSize"
      ],
      "additionalProperties": true,
      "properties": {
        "dimensionType": {
          "type": "string",
          "description": "The type of dimension for this axis.",
          "translation": {
            "ISO 19115-2": [
              "MD_GridSpatialRepresentation \u003e axisDimensionProperties \u003e MD_Dimension \u003e dimensionName \u003e MD_DimensionNameTypeCode"
            ]
          }
        },
        "dimensionSize": {
          "type": "integer",
          "description": "The number of elements along the axis.",
          "translation": {
            "ISO 19115-2": [
              "MD_GridSpatialRepresentation \u003e axisDimensionProperties \u003e MD_Dimension \u003e dimensionSize"
            ]
          }
        },
        "resolution": {
          "$ref": "#/definitions/measure.json",
          "description": "The degree of detail in the grid.",
          "translation": {
            "ISO 19115-2": [
              "MD_GridSpatialRepresentation \u003e axisDimensionProperties \u003e MD_Dimension \u003e resolution"
            ]
          }
        },
        "dimensionTitle": {
          "type": "string",
          "description": "The name of the axis.",
          "translation": {
            "ISO 19115-2": [
              ""
            ]
          }
        },
        "dimensionDescription": {
          "type": "string",
          "description": "The description of the axis.",
          "translation": {
            "ISO 19115-2": [
              ""
            ]
          }
        }
      }
    },
    "measure.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "title": "measure",
      "description": "Number and type of units",
      "example": "../examples/measure.json",
      "required": [
        "type",
        "value",
        "unitOfMeasure"
      ],
      "additionalProperties": true,
      "properties": {
        "type": {
          "enum": [
            "distance",
            "length",
            "angle",
            "measure",
            "scale"
          ],
          "description": "The type of measurement.",
          "translation": {}
        },
        "value": {
          "type": "number",
          "description": "The number of units in the measurement.",
          "translation": {}
        },
        "unitOfMeasure": {
          "type": "string",
          "description": "The type of units to associated with the value.",
          "translation": {},
          "minLength": 1
        }
      }
    }
  }
}