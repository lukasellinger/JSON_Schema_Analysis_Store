{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "/",
  "type": "object",
  "properties": {
    "app": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "host": {
          "type": "string"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        },
        "https": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "required": [
        "name",
        "host",
        "port",
        "https"
      ]
    },
    "database": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "host": {
          "type": "string"
        },
        "user": {
          "type": "string"
        },
        "pass": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "redis": {
      "type": "object",
      "properties": {
        "protocol": {
          "enum": [
            "unix",
            "tcp"
          ]
        },
        "host": {
          "type": "string"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true,
  "required": [
    "app",
    "database",
    "redis"
  ]
}