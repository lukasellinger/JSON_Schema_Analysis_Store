{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "resource_id": {
    "$ref": "#/definitions/common.json_app_id"
  },
  "service": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "maxLength": 60,
        "pattern": "^[\\w\\-\\.]+$"
      },
      "command": {
        "type": "string"
      },
      "restart": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "integer",
            "minimum": 0,
            "maximum": 10
          },
          "interval": {
            "type": "integer",
            "minimum": 30,
            "maximum": 600
          }
        },
        "required": [
          "limit"
        ],
        "additionalProperties": false
      },
      "root": {
        "type": "boolean"
      }
    },
    "required": [
      "name",
      "command"
    ],
    "additionalProperties": false
  },
  "ephemeral_ports": {
    "type": "object",
    "properties": {
      "tcp": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
      },
      "udp": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
      }
    },
    "additionalProperties": false
  },
  "endpoint": {
    "type": "object",
    "properties": {
      "name": {
        "$ref": "#/definitions/common.json_endpoint"
      },
      "port": {
        "type": "integer",
        "minimum": 0,
        "maximum": 65535
      },
      "type": {
        "type": "string",
        "pattern": "^infra$"
      },
      "proto": {
        "type": "string",
        "pattern": "^tcp$|^udp$"
      }
    },
    "required": [
      "name",
      "port"
    ],
    "additionalProperties": false
  },
  "environ": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "value": {
        "type": "string"
      }
    },
    "required": [
      "name",
      "value"
    ],
    "additionalProperties": false
  },
  "vring_rule": {
    "type": "object",
    "properties": {
      "endpoints": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/endpoint_properties_name"
        },
        "minItems": 1
      },
      "pattern": {
        "type": "string"
      }
    },
    "required": [
      "endpoints",
      "pattern"
    ]
  },
  "limit": {
    "type": "integer",
    "minimum": 1
  },
  "resource": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "memory": {
        "$ref": "#/definitions/common.json_memory"
      },
      "cpu": {
        "$ref": "#/definitions/common.json_cpu"
      },
      "disk": {
        "$ref": "#/definitions/common.json_disk"
      },
      "services": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/service"
        }
      },
      "image": {
        "type": "string",
        "pattern": "^native:|docker://.+|http://.+|file://.+$"
      },
      "command": {
        "type": "string"
      },
      "args": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "endpoints": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/endpoint"
        }
      },
      "environ": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/environ"
        }
      },
      "ephemeral_ports": {
        "$ref": "#/definitions/ephemeral_ports"
      },
      "tickets": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/common.json_ticket"
        }
      },
      "features": {
        "type": "array",
        "items": {
          "type": "string",
          "pattern": "^[\\w\\-]+$"
        }
      },
      "shared_ip": {
        "type": "boolean"
      },
      "shared_network": {
        "type": "boolean"
      },
      "passthrough": {
        "type": "array",
        "items": {
          "anyOf": [
            {
              "type": "string",
              "format": "hostname"
            },
            {
              "type": "string",
              "format": "ipv4"
            }
          ]
        }
      },
      "archive": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "vring": {
        "type": "object",
        "properties": {
          "cells": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/common.json_cell"
            }
          },
          "rules": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/vring_rule"
            },
            "minItems": 1
          },
          "required": [
            "cells",
            "rules"
          ],
          "additionalProperties": false
        }
      },
      "identity_group": {
        "$ref": "#/definitions/common.json_identity_group_id"
      },
      "schedule_once": {
        "type": "boolean"
      },
      "affinity_limits": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "pod": {
            "$ref": "#/definitions/limit"
          },
          "rack": {
            "$ref": "#/definitions/limit"
          },
          "server": {
            "$ref": "#/definitions/limit"
          },
          "required": []
        }
      },
      "data_retention_timeout": {
        "$ref": "#/definitions/common.json_time_interval"
      },
      "lease": {
        "$ref": "#/definitions/common.json_time_interval"
      }
    }
  },
  "verbs": {
    "create": {
      "allOf": [
        {
          "required": [
            "memory",
            "cpu",
            "disk"
          ]
        },
        {
          "anyOf": [
            {
              "required": [
                "services"
              ]
            },
            {
              "required": [
                "image"
              ]
            }
          ]
        }
      ]
    },
    "update": {
      "required": []
    }
  },
  "definitions": {
    "common.json_app_id": {
      "anyOf": [
        {
          "type": "string",
          "maxLength": 117,
          "pattern": "^[\\w\\-]+(\\.[\\w\\-]+)+$"
        },
        {
          "type": "string",
          "maxLength": 117,
          "pattern": "^([\\w\\-]+)@([\\w\\-]+)(\\.[\\w\\-]+)+$"
        }
      ]
    },
    "common.json_endpoint": {
      "type": "string",
      "maxLength": 20,
      "pattern": "^[\\w\\-]+$"
    },
    "endpoint_properties_name": {
      "$ref": "#/definitions/common.json_endpoint"
    },
    "common.json_memory": {
      "$ref": "#/definitions/common.json__priv_bytes"
    },
    "common.json__priv_bytes": {
      "type": "string",
      "pattern": "^\\d+[KkMmGg]$"
    },
    "common.json_cpu": {
      "type": "string",
      "pattern": "^\\d+%$"
    },
    "common.json_disk": {
      "$ref": "#/definitions/common.json__priv_bytes"
    },
    "service": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 60,
          "pattern": "^[\\w\\-\\.]+$"
        },
        "command": {
          "type": "string"
        },
        "restart": {
          "type": "object",
          "properties": {
            "limit": {
              "type": "integer",
              "minimum": 0,
              "maximum": 10
            },
            "interval": {
              "type": "integer",
              "minimum": 30,
              "maximum": 600
            }
          },
          "required": [
            "limit"
          ],
          "additionalProperties": false
        },
        "root": {
          "type": "boolean"
        }
      },
      "required": [
        "name",
        "command"
      ],
      "additionalProperties": false
    },
    "endpoint": {
      "type": "object",
      "properties": {
        "name": {
          "$ref": "#/definitions/common.json_endpoint"
        },
        "port": {
          "type": "integer",
          "minimum": 0,
          "maximum": 65535
        },
        "type": {
          "type": "string",
          "pattern": "^infra$"
        },
        "proto": {
          "type": "string",
          "pattern": "^tcp$|^udp$"
        }
      },
      "required": [
        "name",
        "port"
      ],
      "additionalProperties": false
    },
    "environ": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "value"
      ],
      "additionalProperties": false
    },
    "ephemeral_ports": {
      "type": "object",
      "properties": {
        "tcp": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255
        },
        "udp": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255
        }
      },
      "additionalProperties": false
    },
    "common.json_ticket": {
      "type": "string",
      "maxLength": 32,
      "pattern": "^[a-zA-Z0-9_]+@[\\.a-zA-Z0-9_]+$"
    },
    "common.json_cell": {
      "type": "string",
      "maxLength": 20,
      "pattern": "^[a-zA-Z0-9-]+$"
    },
    "vring_rule": {
      "type": "object",
      "properties": {
        "endpoints": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/endpoint_properties_name"
          },
          "minItems": 1
        },
        "pattern": {
          "type": "string"
        }
      },
      "required": [
        "endpoints",
        "pattern"
      ]
    },
    "common.json_identity_group_id": {
      "type": "string",
      "maxLength": 128,
      "pattern": "^[\\w\\-]+(\\.[\\w\\-]+)+$"
    },
    "limit": {
      "type": "integer",
      "minimum": 1
    },
    "common.json_time_interval": {
      "type": "string",
      "pattern": "^\\d+[SsMmHhDdMmYy]$"
    }
  }
}