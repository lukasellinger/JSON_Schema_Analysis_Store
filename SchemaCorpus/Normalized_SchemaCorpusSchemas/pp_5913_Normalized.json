        "dateCreated": {
          "type": "string",
          "format": "date-time"
        },
        "dateModified": {
          "type": "string",
          "format": "date-time"
        },
        "source": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "alternateName": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "dataProvider": {
          "type": "string"
        },
        "owner": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/..\\..\\..\\common-schema.json_definitions_EntityIdentifierType"
          }
        },
        "seeAlso": {
          "oneOf": [
            {
              "type": "array",
              "minItems": 1,
              "items": [
