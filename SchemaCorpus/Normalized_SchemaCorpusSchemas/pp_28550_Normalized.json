{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "resource_id": {
    "type": "string",
    "maxLength": 60,
    "pattern": "^[a-zA-Z0-9_]+(\\.[a-zA-Z0-9\\-_^#]+)+$"
  },
  "resource": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "cells": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/common.json_cell"
        },
        "minItems": 1
      },
      "pattern": {
        "type": "string"
      },
      "endpoints": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/common.json_endpoint"
        },
        "minItems": 0
      },
      "alias": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9]+(\\.[a-zA-Z0-9\\-]+)+$"
      },
      "scope": {
        "type": "string"
      }
    }
  },
  "verbs": {
    "create": {
      "required": [
        "scope",
        "pattern",
        "alias"
      ]
    },
    "update": {
      "required": []
    }
  },
  "definitions": {
    "common.json_cell": {
      "type": "string",
      "maxLength": 20,
      "pattern": "^[a-zA-Z0-9-]+$"
    },
    "common.json_endpoint": {
      "type": "string",
      "maxLength": 20,
      "pattern": "^[\\w\\-]+$"
    }
  }
}