{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "resource_id": {
    "type": "string",
    "maxLength": 60,
    "pattern": "^[a-zA-Z0-9_]+(\\.[a-zA-Z0-9\\-_^#]+)+$"
  },
  "resource": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "cells": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/common.json_cell"
        },
        "minItems": 1
      },
      "pattern": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9]+\\..+$"
      },
      "pending": {
        "type": "integer",
        "minimum": 30
      },
      "exit": {
        "type": "array",
        "items": {
          "enum": [
            "non-zero",
            "aborted",
            "oom"
          ]
        },
        "minItems": 1
      }
    }
  },
  "verbs": {
    "create": {
      "required": [
        "pattern"
      ]
    },
    "update": {
      "required": []
    }
  },
  "definitions": {
    "common.json_cell": {
      "type": "string",
      "maxLength": 20,
      "pattern": "^[a-zA-Z0-9-]+$"
    }
  }
}