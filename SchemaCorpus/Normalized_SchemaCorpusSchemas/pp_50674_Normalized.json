{
  "id": "http://jmather.com/scope.js/counter-schema#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Schema for a counter type",
  "type": "object",
  "required": [
    "type"
  ],
  "properties": {
    "type": {
      "type": "string",
      "oneOf": [
        {
          "format": "counter"
        }
      ]
    },
    "min": {
      "type": [
        "integer",
        "null"
      ]
    },
    "max": {
      "type": [
        "integer",
        "null"
      ]
    },
    "step": {
      "type": "integer",
      "default": 1
    },
    "default": {
      "type": "integer",
      "default": 0
    }
  }
}