{
  "title": "Orphanet Phenotypes",
  "description": "Schema for storing and using Orphanet data.",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "orphaNumber",
    "term"
  ],
  "identifyingProperties": [
    "uuid",
    "orphaNumber"
  ],
  "additionalProperties": false,
  "mixinProperties": [
    {
      "$ref": "#/definitions/mixins.json_schema_version"
    },
    {
      "$ref": "#/definitions/mixins.json_uuid"
    }
  ],
  "properties": {
    "schema_version": {
      "default": "1"
    },
    "orphaNumber": {
      "title": "Unique ID of Orphanet data",
      "description": "Digital Orphanet ID.",
      "type": "string",
      "pattern": "^[0-9]{1,6}$",
      "uniqueKey": "orphaPhenotype:orphaNumber"
    },
    "term": {
      "title": "Orphanet Term.",
      "description": "Ontology term describing Orphanet diseases.",
      "type": "string",
      "uniqueKey": "orphaPhenotype:orphaNumber"
    },
    "type": {
      "title": "Type.",
      "description": "Type of Orphanet phenotype.",
      "type": "string",
      "enum": [
        "Disease",
        "Malformation syndrome",
        "Clinical subtype",
        "Group of phenomes",
        "Particular clinical situation in a disease or syndrome",
        "Morphological anomaly",
        "Etiological subtype",
        "Clinical syndrome",
        "No type",
        "Histopathological subtype",
        "Biological anomaly"
      ]
    },
    "omimIds": {
      "title": "OMIM ID",
      "description": "List of OMIM ids",
      "type": "array",
      "default": [],
      "items": {
        "title": "OMIM ID",
        "description": "OMIM ID",
        "type": "string"
      }
    },
    "synonyms": {
      "title": "Synonyms",
      "description": "Lis of synonym of the disease.",
      "type": "array",
      "default": [],
      "items": {
        "title": "Synonym",
        "description": "Term of one synonym",
        "type": "string"
      }
    },
    "active": {
      "description": "boolean switch to set if the phenotype avaliable for curation.",
      "type": "boolean",
      "default": true
    }
  },
  "columns": {
    "orphaNumber": {
      "title": "ORPHA Number",
      "type": "string"
    },
    "term": {
      "title": "Term",
      "type": "string"
    },
    "type": {
      "title": "Type",
      "type": "string"
    },
    "synonyms": {
      "title": "Synonym(s)",
      "type": "array"
    },
    "omimIds": {
      "title": "OMIM ID(s)",
      "type": "string"
    }
  },
  "definitions": {
    "mixins.json_schema_version": {
      "schema_version": {
        "title": "Schema Version",
        "comment": "Do not submit, value is assigned by the server. The version of the JSON schema that the server uses to validate the object. Schema version indicates generation of schema used to save version to to enable upgrade steps to work. Individual schemas should set the default.",
        "type": "string",
        "pattern": "^\\d+(\\.\\d+)*$",
        "requestMethod": []
      }
    },
    "mixins.json_uuid": {
      "uuid": {
        "title": "UUID",
        "type": "string",
        "format": "uuid",
        "serverDefault": "uuid4",
        "permission": "import_items",
        "requestMethod": "POST"
      }
    }
  }
}