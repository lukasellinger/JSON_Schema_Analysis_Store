{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 10,
      "maxLength": 20
    },
    "speaker": {
      "type": "string",
      "pattern": "(Mr.|Mrs.)?[A-Za-z ]+"
    },
    "type": {
      "$ref": "#/definitions/talk_type.json"
    },
    "date": {
      "$ref": "#/definitions/date.json"
    },
    "location": {
      "$ref": "#/definitions/location.json"
    }
  },
  "required": [
    "location"
  ],
  "definitions": {
    "talk_type.json": {
      "enum": [
        null,
        "KEYNOTE",
        "TALK",
        "LIGHTNING_TALK"
      ]
    },
    "date.json": {
      "type": "object",
      "properties": {
        "year": {
          "type": "integer",
          "minimum": 1000,
          "maximum": 9999
        },
        "month": {
          "type": "integer"
        },
        "day": {
          "type": "integer"
        }
      },
      "required": [
        "year",
        "month",
        "day"
      ],
      "additionalProperties": false
    },
    "location.json": {
      "allOf": [
        {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            }
          },
          "required": []
        },
        {
          "$ref": "#/definitions/https:__example.com_geographical-location.schema.json"
        }
      ]
    },
    "https:__example.com_geographical-location.schema.json": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "title": "Longitude and Latitude Values",
      "description": "A geographical coordinate.",
      "required": [
        "latitude",
        "longitude"
      ],
      "type": "object",
      "properties": {
        "latitude": {
          "type": "number",
          "minimum": -90,
          "maximum": 90
        },
        "longitude": {
          "type": "number",
          "minimum": -180,
          "maximum": 180
        }
      }
    }
  }
}