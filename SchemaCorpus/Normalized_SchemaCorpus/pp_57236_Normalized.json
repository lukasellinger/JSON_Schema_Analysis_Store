{
  "$id": "https://line.github.io/centraldogma/schema/client-profiles",
  "type": "array",
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "title": "The name of the client profile",
        "examples": [
          "local",
          "beta",
          "release"
        ]
      },
      "priority": {
        "type": "integer",
        "title": "The priority of the client profile",
        "examples": [
          "0",
          "-100",
          "100"
        ]
      },
      "hosts": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "host": {
              "type": "string",
              "title": "The host name or IP address",
              "examples": [
                "foo.example.com",
                "192.168.1.2"
              ]
            },
            "protocol": {
              "type": "string",
              "title": "The protocol name",
              "examples": [
                "http",
                "https"
              ]
            },
            "port": {
              "type": "integer",
              "title": "The TCP/IP port number",
              "examples": [
                36462,
                8080,
                8443
              ]
            }
          },
          "required": [
            "host",
            "protocol",
            "port"
          ]
        }
      }
    },
    "required": [
      "name"
    ]
  }
}