{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://fiware.github.io/data-models/UrbanMobility/ArrivalEstimation/schema.json",
  "title": "NGSI GTFS Schema",
  "description": "Arrival Estimation",
  "type": "object",
  "allOf": [
    {
      "$ref": "#/definitions/..\\..\\common-schema.json_definitions_GSMA-Commons"
    },
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "ArrivalEstimation"
          ],
          "description": "NGSI Entity type"
        },
        "hasStop": {
          "type": "string",
          "format": "uri"
        },
        "hasTrip": {
          "type": "string",
          "format": "uri"
        },
        "remainingTime": {
          "type": "string",
          "pattern": "^P(?\u003d\\w*\\d)(?:\\d+Y|Y)?(?:\\d+M|M)?(?:\\d+W|W)?(?:\\d+D|D)?(?:T(?:\\d+H|H)?(?:\\d+M|M)?(?:\\d+(?:\\?.\\d{1,2})?S|S)?)?$"
        },
        "remainingDistance": {
          "type": "number",
          "minValue": 0
        },
        "headsign": {
          "type": "string"
        }
      }
    }
  ],
  "required": [
    "id",
    "type",
    "hasStop",
    "hasTrip",
    "remainingTime",
    "headSign"
  ],
  "definitions": {
    "..\\..\\common-schema.json_definitions_GSMA-Commons": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/..\\..\\common-schema.json_definitions_EntityIdentifierType"
        },
        "dateCreated": {
          "type": "string",
          "format": "date-time"
        },
        "dateModified": {
          "type": "string",
          "format": "date-time"
        },
        "source": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "alternateName": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "dataProvider": {
          "type": "string"
        },
        "owner": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/..\\..\\common-schema.json_definitions_EntityIdentifierType"
          }
        },
        "seeAlso": {
          "oneOf": [
            {
              "type": "array",
              "minItems": 1,
              "items": [
                {
                  "type": "string",
                  "format": "uri"
                }
              ]
            },
            {
              "type": "string",
              "format": "uri"
            }
          ]
        }
      }
    },
    "..\\..\\common-schema.json_definitions_EntityIdentifierType": {
      "anyOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 256,
          "pattern": "^[\\w\\-\\.\\{\\}\\$\\+\\*\\[\\]`|~^@!,:\\\\]+$"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ]
    }
  }
}