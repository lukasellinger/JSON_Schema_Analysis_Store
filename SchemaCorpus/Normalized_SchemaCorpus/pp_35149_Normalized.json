{
  "$schema": "http://json-schema.org/schema#",
  "properties": {
    "advisors": {
      "items": {
        "properties": {
          "curated_relation": {
            "type": "boolean"
          },
          "degree_type": {
            "enum": [
              "PhD",
              "Master",
              "Bachelor",
              "Other"
            ],
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "record": {
            "$ref": "#/definitions/elements\\json_reference.json"
          }
        },
        "type": "object"
      },
      "type": "array",
      "uniqueItems": true
    },
    "author_note": {
      "description": "Contains public note.",
      "type": "string"
    },
    "birth_date": {
      "description": "Stores birth date",
      "format": "date",
      "type": "string"
    },
    "conferences": {
      "description": "Contains information about attended conferences. (their record URIs)",
      "items": {
        "$ref": "#/definitions/elements\\json_reference.json"
      },
      "type": "array",
      "uniqueItems": true
    },
    "death_date": {
      "description": "Stores death date (if any)",
      "format": "date",
      "type": "string"
    },
    "deleted": {
      "type": "boolean"
    },
    "email_addresses": {
      "description": "Contains current email addresses",
      "items": {
        "format": "email",
        "type": "string"
      },
      "type": "array",
      "uniqueItems": true
    },
    "experiments": {
      "description": "Contains information about experiments.",
      "items": {
        "properties": {
          "curated_relation": {
            "type": "boolean"
          },
          "current": {
            "type": "boolean"
          },
          "end_year": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "record": {
            "$ref": "#/definitions/elements\\json_reference.json",
            "description": "URI for the experiment record"
          },
          "start_year": {
            "type": "integer"
          }
        },
        "type": "object"
      },
      "type": "array",
      "uniqueItems": true
    },
    "field_categories": {
      "items": {
        "$ref": "#/definitions/elements\\field.json"
      },
      "type": "array",
      "uniqueItems": true
    },
    "ids": {
      "items": {
        "$ref": "#/definitions/elements\\id.json"
      },
      "type": "array",
      "uniqueItems": true
    },
    "name": {
      "description": "Contains name information.",
      "properties": {
        "numeration": {
          "enum": [
            "",
            "Jr.",
            "Sr.",
            "I",
            "II",
            "III",
            "IV",
            "VI",
            "VII",
            "VIII"
          ],
          "type": "string"
        },
        "preferred_name": {
          "type": "string"
        },
        "title": {
          "enum": [
            "",
            "Sir"
          ],
          "type": "string"
        },
        "value": {
          "format": ".+, .+",
          "type": "string"
        }
      },
      "type": "object"
    },
    "native_name": {
      "description": "Stores name in native form.",
      "type": "array"
    },
    "other_names": {
      "description": "Contains other variation of names. Usually a different form of writing the primary name.",
      "items": {
        "type": "string"
      },
      "type": "array",
      "uniqueItems": true
    },
    "past_emails_addresses": {
      "description": "Contains past email addresses",
      "items": {
        "format": "email",
        "type": "string"
      },
      "type": "array",
      "uniqueItems": true
    },
    "positions": {
      "items": {
        "properties": {
          "current": {
            "type": "boolean"
          },
          "emails": {
            "items": {
              "format": "email",
              "type": "string"
            },
            "type": "array"
          },
          "end_date": {
            "format": "date",
            "type": "string"
          },
          "institution": {
            "properties": {
              "curated_relation": {
                "type": "boolean"
              },
              "name": {
                "type": "string"
              },
              "record": {
                "$ref": "#/definitions/elements\\json_reference.json"
              }
            },
            "type": "object"
          },
          "rank": {
            "$ref": "#/definitions/elements\\rank.json"
          },
          "start_date": {
            "format": "date",
            "type": "string"
          }
        },
        "type": "object"
      },
      "type": "array",
      "uniqueItems": true
    },
    "previous_names": {
      "description": "Contains a previous name. For example, it can be a maiden\u0027s name.",
      "items": {
        "type": "string"
      },
      "type": "array",
      "uniqueItems": true
    },
    "prizes": {
      "description": "Contains prize name.t",
      "items": {
        "description": "E.g. Nobel Prize Physics 1977, Shaw Prize 2006, Sakurai Prize 1985 FIXME: shall we separate the year?",
        "type": "string"
      },
      "type": "array",
      "uniqueItems": true
    },
    "self": {
      "$ref": "#/definitions/elements\\json_reference.json",
      "description": "Url of the record itself",
      "title": "Url of the record"
    },
    "source": {
      "description": "This is the source of informatio. It is currently a mixed bags of user IDs or provenance information, e.g. arXiv etc. FIXME: we should really discuss about it. E.g. eprint, webform, Rachel.Lumpkin@durham.ac.uk(96), Fermilab, C09-05-04, KYOTOU...",
      "items": {
        "date_verified": {
          "format": "date",
          "type": "string"
        },
        "properties": {
          "name": {
            "type": "string"
          }
        },
        "type": "object"
      },
      "type": "array",
      "uniqueItems": true
    },
    "status": {
      "description": "The person\u0027s status",
      "enum": [
        "active",
        "deceased",
        "departed",
        "retired"
      ],
      "type": "string"
    },
    "urls": {
      "items": {
        "$ref": "#/definitions/elements\\url.json"
      },
      "type": "array",
      "uniqueItems": true
    }
  },
  "required": [
    "name"
  ],
  "type": "object",
  "definitions": {
    "elements\\json_reference.json": {
      "$schema": "http://json-schema.org/schema#",
      "properties": {
        "$ref": {
          "description": "URL to the referenced resource",
          "format": "url",
          "type": "string"
        }
      },
      "required": [
        "$ref"
      ],
      "type": "object"
    },
    "elements\\field.json": {
      "$schema": "http://json-schema.org/schema#",
      "properties": {
        "scheme": {
          "title": "INSPIRE",
          "type": "string"
        },
        "source": {
          "enum": [
            "INSPIRE",
            "submitter",
            "conference",
            "curator",
            "publisher",
            "magpie"
          ],
          "type": "string"
        },
        "term": {
          "enum": [
            "Accelerators",
            "Astrophysics",
            "Computing",
            "Data Analysis and Statistics",
            "Experiment-HEP",
            "Experiment-Nucl",
            "General Physics",
            "Gravitation and Cosmology",
            "Instrumentation",
            "Lattice",
            "Math and Math Physics",
            "Other",
            "Phenomenology-HEP",
            "Theory-HEP",
            "Theory-Nucl"
          ],
          "title": "INSPIRE term",
          "type": "string"
        }
      },
      "type": "object"
    },
    "elements\\id.json": {
      "$schema": "http://json-schema.org/schema#",
      "anyOf": [
        {
          "properties": {
            "type": {
              "enum": [
                "INSPIRE ID"
              ],
              "type": "string"
            },
            "value": {
              "pattern": "INSPIRE-\\d{8}",
              "type": "string"
            }
          },
          "type": "object"
        },
        {
          "properties": {
            "type": {
              "enum": [
                "INSPIRE BAI"
              ],
              "type": "string"
            },
            "value": {
              "pattern": "(\\w+\\.)+\\d+",
              "type": "string"
            }
          },
          "type": "object"
        },
        {
          "properties": {
            "type": {
              "enum": [
                "ORCID"
              ],
              "type": "string"
            },
            "value": {
              "pattern": "\\d{4}-\\d{4}-\\d{4}-\\d{3}[0-9Xx]",
              "type": "string"
            }
          },
          "type": "object"
        },
        {
          "properties": {
            "type": {
              "enum": [
                "JACOW"
              ],
              "type": "string"
            },
            "value": {
              "pattern": "JACoW-\\d{8}",
              "type": "string"
            }
          },
          "type": "object"
        },
        {
          "properties": {
            "type": {
              "enum": [
                "KAKEN"
              ],
              "type": "string"
            },
            "value": {
              "pattern": "KAKEN-\\d{8}",
              "type": "string"
            }
          },
          "type": "object"
        },
        {
          "properties": {
            "type": {
              "enum": [
                "ARXIV"
              ],
              "type": "string"
            },
            "value": {
              "pattern": "\\w+_(\\w_)?\\d+",
              "type": "string"
            }
          },
          "type": "object"
        },
        {
          "properties": {
            "type": {
              "enum": [
                "CERN"
              ],
              "type": "string"
            },
            "value": {
              "pattern": "CERN-\\d+",
              "type": "string"
            }
          }
        },
        {
          "properties": {
            "type": {
              "enum": [
                "DESY"
              ],
              "type": "string"
            },
            "value": {
              "pattern": "DESY-\\d+",
              "type": "string"
            }
          }
        },
        {
          "properties": {
            "type": {
              "enum": [
                "GOOGLESCHOLAR"
              ]
            },
            "value": {
              "pattern": "(\\w|-){12}",
              "type": "string"
            }
          }
        },
        {
          "properties": {
            "type": {
              "enum": [
                "VIAF"
              ]
            },
            "value": {
              "pattern": "\\d{7,9}",
              "type": "string"
            }
          }
        },
        {
          "properties": {
            "type": {
              "enum": [
                "RESEARCHERID"
              ]
            },
            "value": {
              "pattern": "[A-z]-\\d{4}-\\d{4}",
              "type": "string"
            }
          }
        },
        {
          "properties": {
            "type": {
              "enum": [
                "SCOPUS"
              ]
            },
            "value": {
              "pattern": "\\d{10,11}",
              "type": "string"
            }
          }
        },
        {
          "properties": {
            "type": {
              "enum": [
                "WIKIPEDIA"
              ],
              "type": "string"
            },
            "value": {
              "pattern": "\\w+",
              "type": "string"
            }
          }
        },
        {
          "properties": {
            "type": {
              "enum": [
                "SLAC"
              ],
              "type": "string"
            },
            "value": {
              "pattern": "SLAC-\\d+",
              "type": "string"
            }
          }
        }
      ],
      "required": [
        "type",
        "value"
      ]
    },
    "elements\\rank.json": {
      "$schema": "http://json-schema.org/schema#",
      "enum": [
        "STAFF",
        "SENIOR",
        "JUNIOR",
        "VISITOR",
        "POSTDOC",
        "PHD",
        "MASTER",
        "UNDERGRADUATE",
        "OTHER"
      ],
      "title": "Scientific position rank",
      "type": "string"
    },
    "elements\\url.json": {
      "$schema": "http://json-schema.org/schema#",
      "properties": {
        "description": {
          "type": "string"
        },
        "value": {
          "format": "url",
          "type": "string"
        }
      },
      "type": "object"
    }
  }
}