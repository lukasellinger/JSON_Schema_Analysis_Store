{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Harcon Message format",
  "required": [
    "id",
    "division",
    "event",
    "params"
  ],
  "properties": {
    "id": {
      "type": "string",
      "title": "ID of the message",
      "default": "",
      "examples": [
        ""
      ],
      "pattern": "^(.*)$"
    },
    "division": {
      "type": "string",
      "title": "Qualified name of the division",
      "default": "",
      "examples": [
        "King"
      ],
      "pattern": "^(.*)$"
    },
    "event": {
      "type": "string",
      "title": "Qualified address to a service",
      "default": "",
      "examples": [
        "Claire.tampis"
      ],
      "pattern": "^(.*)$"
    },
    "params": {
      "type": "array",
      "title": "Parameters to be passed"
    }
  }
}