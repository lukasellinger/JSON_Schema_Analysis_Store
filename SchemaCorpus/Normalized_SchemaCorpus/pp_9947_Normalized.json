{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "token": {
      "type": "string",
      "minLength": 1
    },
    "email": {
      "type": "string",
      "format": "email",
      "maxLength": 1024
    },
    "password": {
      "type": "string",
      "minLength": 8,
      "maxLength": 2048,
      "pattern": "^(?\u003d.*[A-Z])(?\u003d.*[^A-z0-9])(?\u003d.*[0-9])(?\u003d.*[a-z]).{8,}$"
    }
  },
  "required": [
    "token",
    "email",
    "password"
  ],
  "additionalProperties": false
}