{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "/",
  "type": "object",
  "properties": {
    "actor": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "firstname": {
          "type": "string"
        },
        "lastname": {
          "type": "string"
        },
        "birthdate": {
          "type": "string"
        },
        "movies": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "year": {
                "type": "integer"
              },
              "genre": {
                "type": "string"
              }
            }
          }
        }
      },
      "required": [
        "id",
        "firstname",
        "lastname",
        "birthdate",
        "movies"
      ]
    }
  },
  "required": [
    "actor"
  ]
}