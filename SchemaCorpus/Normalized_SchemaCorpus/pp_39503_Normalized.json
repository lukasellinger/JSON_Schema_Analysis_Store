{
  "id": "https://raw.githubusercontent.com/eviratec/schema/master/v1/customer/account.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "schema for a customer account",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "customer_id",
    "balance"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "customer_id": {
      "type": "string",
      "format": "uuid"
    },
    "balance": {
      "type": "object",
      "allOf": [
        {
          "type": "object",
          "required": [
            "in"
          ],
          "properties": {
            "in": {
              "enum": [
                "cr",
                "dr"
              ]
            }
          }
        },
        {
          "$ref": "#/definitions/..\\currency\\amount.json"
        }
      ]
    }
  },
  "definitions": {
    "..\\currency\\amount.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "description": "schema for a currency amount",
      "type": "object",
      "required": [
        "currency",
        "units"
      ],
      "properties": {
        "currency": {
          "$ref": "#/definitions/..\\currency.json"
        },
        "units": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "..\\currency.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "description": "schema for a currency",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "code",
        "label",
        "separator"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "code": {
          "type": "string",
          "maxLength": 4
        },
        "label": {
          "type": "string",
          "maxLength": 64
        },
        "prefix": {
          "type": "string",
          "maxLength": 1
        },
        "separator": {
          "type": "object",
          "required": [
            "thousands",
            "decimal"
          ],
          "properties": {
            "thousands": {
              "type": "string",
              "minLength": 1,
              "maxLength": 1
            },
            "decimal": {
              "type": "string",
              "minLength": 1,
              "maxLength": 1
            }
          }
        }
      }
    }
  }
}