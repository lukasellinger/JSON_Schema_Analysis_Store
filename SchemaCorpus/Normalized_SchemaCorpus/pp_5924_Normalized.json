          "enum": [
            "GreenspaceRecord"
          ],
          "description": "NGSI Entity type"
        },
        "dateObserved": {
          "type": "string",
          "format": "date-time"
        },
        "soilTemperature": {
          "type": "number"
        },
        "soilMoistureVwc": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "soilMoistureEc": {
