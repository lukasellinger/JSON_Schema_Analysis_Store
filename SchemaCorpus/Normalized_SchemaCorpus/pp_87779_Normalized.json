{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://raw.githubusercontent.com/washingtonpost/ans-schema/master/src/main/resources/schema/ans/v0_3/audio.json",
  "description": "A audio element",
  "type": "object",
  "allOf": [
    {
      "$ref": "#/definitions/ans.json",
      "properties": {
        "sourceUrl": {
          "description": "The audio source file.",
          "type": "string"
        },
        "mimetype": {
          "description": "Mime type of audio source file.",
          "type": "string"
        },
        "autoplay": {
          "description": "Whether to autoplay is enabled.",
          "type": "boolean"
        },
        "controls": {
          "description": "Whether controls are enabled.",
          "type": "boolean"
        },
        "loop": {
          "description": "Whether looping is enabled.",
          "type": "boolean"
        },
        "preload": {
          "description": "Whether preload is enabled.",
          "type": "boolean"
        }
      },
      "required": [
        "sourceUrl"
      ]
    }
  ],
  "definitions": {
    "ans.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Root-level ANS schema.",
      "description": "Holds common attributes of ANS objects.",
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/trait_typed.json",
          "properties": {
            "version": {
              "type": "string",
              "description": "The ANS Version of this ANS object"
            }
          }
        }
      ]
    },
    "trait_typed.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Type trait",
      "description": "Trait that helps support strongly-typed implementations of this schema.",
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "description": "The concrete type of element the implementing element is.",
          "type": "string"
        }
      }
    }
  }
}