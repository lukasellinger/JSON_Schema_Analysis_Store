{
  "input_schema": {
    "type": "object",
    "properties": {
      "ntp": {
        "type": "object",
        "properties": {
          "ntp_boot_servers": {
            "type": "array",
            "items": {
              "type": "string",
              "title": "NTP Boot server",
              "default": "",
              "examples": [
                "6.6.6.6"
              ]
            }
          },
          "ntp_servers": {
            "type": "array",
            "items": {
              "type": "string",
              "title": "NTP server",
              "default": "",
              "examples": [
                "8.8.8.8"
              ]
            }
          },
          "time_zone": {
            "type": "string",
            "title": "Time Zone",
            "default": "",
            "examples": [
              "America/Los_Angeles"
            ]
          }
        }
      },
      "snmp": {
        "type": "object",
        "properties": {
          "snmp_location": {
            "type": "string",
            "title": "SNMP Location",
            "default": "",
            "examples": [
              "A.6.221"
            ]
          },
          "snmp_contact": {
            "type": "string",
            "title": "SNMP Contact",
            "default": "",
            "examples": [
              "aakashr"
            ]
          },
          "snmp_communities": {
            "type": "array",
            "items": {
              "type": "string",
              "title": "SNMP Community",
              "examples": [
                "community_A",
                "community_B"
              ]
            }
          }
        }
      },
      "static_routes": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "subnets": {
              "type": "array",
              "items": {
                "type": "string",
                "title": "Subnet",
                "examples": [
                  "10.1.1.0/24",
                  "10.1.2.0/24"
                ]
              }
            },
            "nexthop": {
              "type": "string",
              "title": "Next hop IP",
              "examples": [
                "10.1.1.254"
              ]
            }
          }
        }
      }
    }
  },
  "output_schema": {
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Generic Job Output",
    "type": "object",
    "properties": {
      "status": {
        "type": "string",
        "enum": [
          "Success",
          "Failure",
          "Timeout"
        ],
        "description": "Result status of the job"
      },
      "message": {
        "type": "string",
        "description": "Should capture a summarized error message in case of Failures."
      },
      "results": {
        "type": "object",
        "description": "JSON object holding the job specific output details"
      }
    },
    "required": [
      "status"
    ]
  }
}