{
  "$schema": "http://json-schema.org/schema#",
  "id": "https://fiware.github.io/data-models/specs/AgriFood/Animal/schema.json",
  "title": "Animal model IoF2020 ShareBeef UC",
  "description": "An observation of animal conditions at a certain place and time. This data model has been developed for the IoF2020 UC ShareBeef by UCO and SensoWave.",
  "type": "object",
  "allOf": [
    {
      "$ref": "#/definitions/..\\..\\..\\common-schema.json_definitions_GSMA-Commons"
    },
    {
      "$ref": "#/definitions/..\\..\\..\\common-schema.json_definitions_Location-Commons"
    },
    {
      "$ref": "#/definitions/..\\agrifood-schema.json_definitions_AgriFood-Commons"
    },
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Animal"
          ],
          "description": "NGSI Entity Type"
        },
        "species": {
          "type": "string",
          "enum": [
            "cow",
            "goat",
            "horse",
            "pig",
            "sheep"
          ],
          "description": "Species to which the animal belongs"
        },
        "legalId": {
          "type": "string",
          "description": "Legal ID of the animal"
        },
        "birthdate": {
          "type": "string",
          "format": "date-time",
          "description": "Animalâ€™s birthdate"
        },
        "sex": {
          "type": "string",
          "enum": [
            "male",
            "female"
          ],
          "description": "Sex of the animal"
        },
        "breed": {
          "type": "string",
          "description": "Breed of the animal"
        },
        "calvedBy": {
          "$ref": "#/definitions/..\\..\\..\\common-schema.json_definitions_EntityIdentifierType",
          "description": "Mother of the animal"
        },
        "siredBy": {
          "$ref": "#/definitions/..\\..\\..\\common-schema.json_definitions_EntityIdentifierType",
          "description": "Father of the animal"
        },
        "weight": {
          "type": "number"
        },
        "ownedBy": {
          "$ref": "#/definitions/..\\..\\..\\common-schema.json_definitions_EntityIdentifierType",
          "description": "The owner of the animal"
        },
        "locatedAt": {
          "$ref": "#/definitions/..\\..\\..\\common-schema.json_definitions_EntityIdentifierType",
          "description": "AgridataParcel relationship"
        },
        "phenologicalCondition": {
          "type": "string",
          "enum": [
            "lactatingBaby",
            "grazingBaby",
            "maleAdult",
            "femaleAdult",
            "maleYoung",
            "femaleYoung"
          ],
          "description": "Phenological condition of the animal"
        },
        "reproductiveCondition": {
          "type": "string",
          "enum": [
            "noStatus",
            "inactive",
            "inCalf",
            "inHeat",
            "active"
          ],
          "description": "Reproductive condition of the animal"
        },
        "healthCondition": {
          "type": "string",
          "enum": [
            "healthy",
            "sick",
            "inTreatment"
          ],
          "description": "Phenological condition of the animal"
        },
        "fedWith": {
          "$ref": "#/definitions/..\\..\\..\\common-schema.json_definitions_EntityIdentifierType",
          "description": "Food used for the animal"
        },
        "welfareCondition": {
          "type": "string",
          "enum": [
            "issue",
            "adequate"
          ],
          "description": "Indicator of the animal welfare"
        }
      }
    }
  ],
  "required": [
    "id",
    "type",
    "species",
    "legalId",
    "sex"
  ],
  "definitions": {
    "..\\..\\..\\common-schema.json_definitions_GSMA-Commons": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/..\\..\\..\\common-schema.json_definitions_EntityIdentifierType"
        },
        "dateCreated": {
          "type": "string",
          "format": "date-time"
        },
        "dateModified": {
          "type": "string",
          "format": "date-time"
        },
        "source": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "alternateName": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "dataProvider": {
          "type": "string"
        },
        "owner": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/..\\..\\..\\common-schema.json_definitions_EntityIdentifierType"
          }
        },
        "seeAlso": {
          "oneOf": [
            {
              "type": "array",
              "minItems": 1,
              "items": [
                {
                  "type": "string",
                  "format": "uri"
                }
              ]
            },
            {
              "type": "string",
              "format": "uri"
            }
          ]
        }
      }
    },
    "..\\..\\..\\common-schema.json_definitions_EntityIdentifierType": {
      "anyOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 256,
          "pattern": "^[\\w\\-\\.\\{\\}\\$\\+\\*\\[\\]`|~^@!,:\\\\]+$"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ]
    },
    "..\\..\\..\\common-schema.json_definitions_Location-Commons": {
      "type": "object",
      "properties": {
        "location": {
          "$ref": "#/definitions/https:__geojson.org_schema_Geometry.json"
        },
        "address": {
          "type": "object",
          "properties": {
            "streetAddress": {
              "type": "string"
            },
            "addressLocality": {
              "type": "string"
            },
            "addressRegion": {
              "type": "string"
            },
            "addressCountry": {
              "type": "string"
            },
            "postalCode": {
              "type": "string"
            },
            "postOfficeBoxNumber": {
              "type": "string"
            },
            "areaServed": {
              "type": "string"
            }
          }
        },
        "areaServed": {
          "type": "string"
        }
      }
    },
    "https:__geojson.org_schema_Geometry.json": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "GeoJSON Geometry",
      "oneOf": [
        {
          "title": "GeoJSON Point",
          "type": "object",
          "required": [
            "type",
            "coordinates"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "Point"
              ]
            },
            "coordinates": {
              "type": "array",
              "minItems": 2,
              "items": {
                "type": "number"
              }
            },
            "bbox": {
              "type": "array",
              "minItems": 4,
              "items": {
                "type": "number"
              }
            }
          }
        },
        {
          "title": "GeoJSON LineString",
          "type": "object",
          "required": [
            "type",
            "coordinates"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "LineString"
              ]
            },
            "coordinates": {
              "type": "array",
              "minItems": 2,
              "items": {
                "type": "array",
                "minItems": 2,
                "items": {
                  "type": "number"
                }
              }
            },
            "bbox": {
              "type": "array",
              "minItems": 4,
              "items": {
                "type": "number"
              }
            }
          }
        },
        {
          "title": "GeoJSON Polygon",
          "type": "object",
          "required": [
            "type",
            "coordinates"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "Polygon"
              ]
            },
            "coordinates": {
              "type": "array",
              "items": {
                "type": "array",
                "minItems": 4,
                "items": {
                  "type": "array",
                  "minItems": 2,
                  "items": {
                    "type": "number"
                  }
                }
              }
            },
            "bbox": {
              "type": "array",
              "minItems": 4,
              "items": {
                "type": "number"
              }
            }
          }
        },
        {
          "title": "GeoJSON MultiPoint",
          "type": "object",
          "required": [
            "type",
            "coordinates"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "MultiPoint"
              ]
            },
            "coordinates": {
              "type": "array",
              "items": {
                "type": "array",
                "minItems": 2,
                "items": {
                  "type": "number"
                }
              }
            },
            "bbox": {
              "type": "array",
              "minItems": 4,
              "items": {
                "type": "number"
              }
            }
          }
        },
        {
          "title": "GeoJSON MultiLineString",
          "type": "object",
          "required": [
            "type",
            "coordinates"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "MultiLineString"
              ]
            },
            "coordinates": {
              "type": "array",
              "items": {
                "type": "array",
                "minItems": 2,
                "items": {
                  "type": "array",
                  "minItems": 2,
                  "items": {
                    "type": "number"
                  }
                }
              }
            },
            "bbox": {
              "type": "array",
              "minItems": 4,
              "items": {
                "type": "number"
              }
            }
          }
        },
        {
          "title": "GeoJSON MultiPolygon",
          "type": "object",
          "required": [
            "type",
            "coordinates"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "MultiPolygon"
              ]
            },
            "coordinates": {
              "type": "array",
              "items": {
                "type": "array",
                "items": {
                  "type": "array",
                  "minItems": 4,
                  "items": {
                    "type": "array",
                    "minItems": 2,
                    "items": {
                      "type": "number"
                    }
                  }
                }
              }
            },
            "bbox": {
              "type": "array",
              "minItems": 4,
              "items": {
                "type": "number"
              }
            }
          }
        }
      ]
    },
    "..\\agrifood-schema.json_definitions_AgriFood-Commons": {
      "type": "object",
      "properties": {
        "relatedSource": {
          "type": "array",
          "description": "List of IDs the current entity may have in external applications",
          "items": [
            {
              "type": "object",
              "values": {
                "application": {
                  "$ref": "#/definitions/..\\..\\..\\common-schema.json_definitions_EntityIdentifierType"
                },
                "applicationEntityId": {
                  "type": "string"
                }
              }
            }
          ]
        }
      }
    }
  }
}