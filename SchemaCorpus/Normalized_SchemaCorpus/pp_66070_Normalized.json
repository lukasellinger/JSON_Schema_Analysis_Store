{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Copy object",
  "description": "Object specifications for COPY mode",
  "type": "object",
  "properties": {
    "mode": {
      "$ref": "#/definitions/definitions.json_mode"
    },
    "filename": {
      "$ref": "#/definitions/definitions.json_filename"
    },
    "size": {
      "$ref": "#/definitions/definitions.json_size"
    },
    "sha256sum": {
      "$ref": "#/definitions/definitions.json_sha256sum"
    },
    "install-if-different": {
      "$ref": "#/definitions/install-if-different.json"
    },
    "target-type": {
      "description": "The type of target (only device)",
      "type": "string",
      "enum": [
        "device"
      ]
    },
    "target-mode": {
      "description": "The mode which the target will have after installed",
      "type": "string",
      "pattern": "^[0-9]{4}$"
    },
    "target-uid": {
      "description": "The UNIX user ID to be set in target when installed",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "integer"
        }
      ]
    },
    "target-gid": {
      "description": "The UNIX group ID to be set in target when installed",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "integer"
        }
      ]
    },
    "target": {
      "$ref": "#/definitions/definitions.json_target"
    },
    "compressed": {
      "$ref": "#/definitions/definitions.json_compressed"
    },
    "required-uncompressed-size": {
      "$ref": "#/definitions/definitions.json_required-uncompressed-size"
    },
    "filesystem": {
      "$ref": "#/definitions/definitions.json_filesystem"
    },
    "target-path": {
      "$ref": "#/definitions/definitions.json_target-path"
    },
    "format?": {
      "$ref": "#/definitions/definitions.json_format?"
    },
    "format-options": {
      "$ref": "#/definitions/definitions.json_format-options"
    },
    "mount-options": {
      "$ref": "#/definitions/definitions.json_mount-options"
    }
  },
  "required": [
    "filename",
    "filesystem",
    "mode",
    "sha256sum",
    "size",
    "target-type",
    "target",
    "target-path"
  ],
  "additionalProperties": false,
  "dependencies": {
    "target-gid": [
      "target-uid"
    ],
    "target-uid": [
      "target-gid"
    ],
    "mode": {
      "properties": {
        "mode": {
          "enum": [
            "copy"
          ]
        }
      }
    },
    "format-options": {
      "properties": {
        "format?": {
          "enum": [
            true
          ]
        }
      },
      "required": [
        "format?"
      ]
    }
  },
  "definitions": {
    "definitions.json_mode": {
      "description": "Represents the install mode for the object data",
      "type": "string",
      "enum": [
        "copy",
        "flash",
        "imxkobs",
        "raw",
        "tarball",
        "ubifs"
      ]
    },
    "definitions.json_filename": {
      "description": "file name used by client to rebuild the commit",
      "type": "string",
      "minLength": 1
    },
    "definitions.json_size": {
      "description": "Total size of the object in bytes",
      "type": "integer",
      "minimum": 0
    },
    "definitions.json_sha256sum": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "install-if-different.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Object install-if-different property",
      "description": "This property handles when an object should be installed on target",
      "oneOf": [
        {
          "title": "sha256sum verification type",
          "description": "Installs if sha256sum doesn\u0027t match",
          "type": "string",
          "enum": [
            "sha256sum"
          ]
        },
        {
          "title": "Known patterns verification type",
          "description": "Installs if version of know object type is different",
          "type": "object",
          "properties": {
            "version": {
              "type": "string"
            },
            "pattern": {
              "type": "string",
              "enum": [
                "linux-kernel",
                "u-boot"
              ]
            }
          },
          "required": [
            "version",
            "pattern"
          ],
          "additionalProperties": false
        },
        {
          "title": "Custom pattern verification type",
          "description": "Installs if version of unknow object type is different",
          "type": "object",
          "properties": {
            "version": {
              "type": "string"
            },
            "pattern": {
              "type": "object",
              "properties": {
                "regexp": {
                  "description": "the pattern to match",
                  "type": "string"
                },
                "seek": {
                  "description": "Where to start reading file.",
                  "type": "integer",
                  "default": 0
                },
                "buffer-size": {
                  "description": "How much bytes must be read. If -1, until the end.",
                  "type": "integer",
                  "default": -1
                }
              },
              "additionalProperties": false,
              "required": [
                "regexp"
              ]
            }
          },
          "additionalProperties": false,
          "required": [
            "version",
            "pattern"
          ]
        }
      ]
    },
    "definitions.json_target": {
      "description": "The target itself",
      "type": "string",
      "minLength": 1
    },
    "definitions.json_compressed": {
      "description": "If the object is a compressed file or not",
      "type": "boolean"
    },
    "definitions.json_required-uncompressed-size": {
      "description": "Number of bytes required for installing the object",
      "type": "integer",
      "minimum": 0
    },
    "definitions.json_filesystem": {
      "description": "Filesystem type that must be used to mount device",
      "type": "string",
      "enum": [
        "btrfs",
        "ext2",
        "ext3",
        "ext4",
        "vfat",
        "f2fs",
        "jffs2",
        "ubifs",
        "xfs"
      ]
    },
    "definitions.json_target-path": {
      "description": "Target path on which the object must be installed to (e.g., /vmlinuz). This is relative to the mount point. Field present when mode equals to copy or tarball",
      "type": "string"
    },
    "definitions.json_format?": {
      "description": "Specifies whether the device should be formatted",
      "type": "boolean",
      "default": false
    },
    "definitions.json_format-options": {
      "description": "Options to format device",
      "type": "string"
    },
    "definitions.json_mount-options": {
      "description": "Options to mount the filesystem in device",
      "type": "string"
    }
  }
}