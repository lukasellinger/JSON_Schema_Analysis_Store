{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "allOf": [
    {
      "$ref": "#/definitions/evaluation.json"
    },
    {
      "type": "object",
      "properties": {
        "professor": {
          "$ref": "#/definitions/course.json"
        },
        "author": {
          "$ref": "#/definitions/author.json"
        }
      },
      "required": [
        "course",
        "author"
      ]
    }
  ],
  "definitions": {
    "evaluation.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "required": [
        "id",
        "version",
        "post_time",
        "data",
        "votes_score"
      ],
      "properties": {
        "id": {
          "type": "integer"
        },
        "version": {
          "type": "integer"
        },
        "post_time": {
          "type": "string"
        },
        "data": {
          "type": "object"
        },
        "votes_score": {
          "type": "integer"
        }
      }
    },
    "course.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "required": [
        "id",
        "number",
        "title",
        "department_id"
      ],
      "properties": {
        "id": {
          "type": "integer"
        },
        "number": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "department_id": {
          "type": "integer"
        }
      }
    },
    "author.json": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "properties": {
        "self": {
          "type": "boolean"
        },
        "graduation_year": {
          "type": [
            "integer",
            "null"
          ]
        },
        "majors": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "integer"
              }
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "self",
        "graduation_year",
        "majors"
      ]
    }
  }
}