{
  "id": "citation.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "citation",
  "description": "A citation object.",
  "required": [
    "title"
  ],
  "example": "../examples/citation.json",
  "translation": {
    "FGDC CSDGM": [
      "idinfo \u003e citation \u003e citeinfo"
    ],
    "ISO 19115-2": [
      "CI_Citation"
    ]
  },
  "properties": {
    "title": {
      "type": "string",
      "description": "Name by which the cited resource is known.",
      "translation": {
        "ISO 19115-2": [
          "CI_Citation \u003e title",
          "FC_FeatureCatalogue \u003e name"
        ],
        "FGDC CSDGM": [
          "idinfo \u003e citation \u003e citeinfo \u003e title"
        ]
      }
    },
    "alternateTitle": {
      "type": "array",
      "description": "Alias by which the cited resource is known.",
      "translation": {
        "ISO 19115-2": [
          "CI_Citation \u003e alternateTitle"
        ]
      },
      "items": {
        "type": "string"
      }
    },
    "date": {
      "type": "array",
      "description": "Date referenced to the cited resource.",
      "translation": {
        "ISO 19115-2": [
          "CI_Citation \u003e date \u003e CI_Date"
        ]
      },
      "items": {
        "$ref": "common.json#/definitions/dateObject"
      }
    },
    "edition": {
      "type": "string",
      "description": "Version identifier for the resource.",
      "translation": {
        "ISO 19115-2": [
          "CI_Citation \u003e edition",
          "FC_FeatureCatalogue \u003e versionNumber"
        ],
        "FGDC CSDGM": [
          "idinfo \u003e citation \u003e edition"
        ]
      }
    },
    "responsibleParty": {
      "type": "array",
      "description": "Identification of, and means of communication with, person(s) and organization(s) associated with the cited resource.",
      "translation": {
        "ISO 19115-2": [
          "CI_Citation \u003e citedResponsibleParty \u003e CI_ResponsibleParty",
          "FC_FeatureCatalogue \u003e producer \u003e CI_ResponisbleParty"
        ],
        "FGDC CSDGM": [
          "idinfo \u003e ptcontac \u003e cntinfo"
        ]
      },
      "items": {
        "$ref": "responsibility.json#"
      }
    },
    "presentationForm": {
      "type": "array",
      "description": "The form that the resource is presented, such as: digital map, digital document, etc.",
      "translation": {
        "ISO 19115-2": [
          "CI_Citation \u003e presentationForm [CI_PresentationFormCode]"
        ],
        "FGDC CSDGM": [
          "idinfo \u003e citation \u003e geoform"
        ]
      },
      "items": {
        "type": "string"
      }
    },
    "identifier": {
      "type": "array",
      "description": "Identifier for the resource in the context of the citation.",
      "translation": {
        "ISO 19115-2": [
          "CI_Citation \u003e identifier"
        ]
      },
      "items": {
        "$ref": "./identifier.json#"
      }
    },
    "series": {
      "$ref": "#/definitions/series"
    },
    "otherCitationDetails": {
      "type": "array",
      "description": "Other information required to complete the citation that is not recorded elsewhere.",
      "translation": {},
      "items": {
        "type": "string"
      }
    },
    "onlineResource": {
      "type": "array",
      "description": "On-line information related to the citation.",
      "translation": {
        "ISO 19115-2": [
          "CI_Citation \u003e citedResponsibleParty \u003e CI_ResponsibleParty \u003e contact \u003e CI_Contact \u003e onlineResource \u003e CI_OnlineResource"
        ]
      },
      "items": {
        "$ref": "onlineResource.json#"
      }
    },
    "graphic": {
      "type": "array",
      "description": "Online graphic associated with the citation",
      "translation": {},
      "items": {
        "$ref": "./graphic.json#"
      }
    }
  },
  "definitions": {
    "series": {
      "type": "object",
      "title": "series",
      "description": "Information about the series, or aggregate resource, to which a resource belongs.",
      "example": "../series.json",
      "translation": {},
      "additionalProperties": true,
      "properties": {
        "seriesName": {
          "type": "string"
        },
        "seriesIssue": {
          "type": "string"
        },
        "issuePage": {
          "type": "string"
        }
      }
    }
  }
}